{
  "$schema": "../../schemas/animation_clip.schema.json",
  "id": "anim_attack_ranged",
  "name": "Ranged Attack",
  "description": "Bow draw and release animation",
  "version": "1.0",
  "duration": 1.2,
  "frameRate": 30,
  "looping": false,
  "playbackSpeed": 1.0,
  "skeleton": "humanoid_standard",

  "bones": {
    "Root": {
      "enabled": true,
      "interpolation": "linear",
      "keyframes": [
        { "time": 0.0, "position": [0, 0, 0], "rotation": [0, 0, 0, 1] },
        { "time": 1.2, "position": [0, 0, 0], "rotation": [0, 0, 0, 1] }
      ]
    },
    "Spine": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 0.3, "rotation": [0.05, -0.08, 0, 0.9956] },
        { "time": 0.6, "rotation": [0.08, -0.1, 0, 0.9916] },
        { "time": 0.7, "rotation": [0.02, 0.05, 0, 0.9986] },
        { "time": 1.2, "rotation": [0, 0, 0, 1] }
      ]
    },
    "LeftArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.05, 0, 0.1, 0.9937] },
        { "time": 0.3, "rotation": [-0.4, 0.2, 0.5, 0.7416] },
        { "time": 0.6, "rotation": [-0.45, 0.2, 0.55, 0.6736] },
        { "time": 0.7, "rotation": [-0.45, 0.2, 0.55, 0.6736] },
        { "time": 1.2, "rotation": [0.05, 0, 0.1, 0.9937] }
      ]
    },
    "LeftForeArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 0.3, "rotation": [0, 0, 0, 1] },
        { "time": 0.6, "rotation": [0, 0, 0, 1] },
        { "time": 1.2, "rotation": [0, 0, 0, 1] }
      ]
    },
    "RightArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.05, 0, -0.1, 0.9937] },
        { "time": 0.3, "rotation": [-0.3, -0.4, -0.3, 0.8062] },
        { "time": 0.6, "rotation": [-0.35, -0.5, -0.35, 0.7071] },
        { "time": 0.7, "rotation": [-0.2, -0.3, -0.2, 0.9055] },
        { "time": 1.2, "rotation": [0.05, 0, -0.1, 0.9937] }
      ]
    },
    "RightForeArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 0.3, "rotation": [-0.5, 0, 0, 0.866] },
        { "time": 0.6, "rotation": [-0.7, 0, 0, 0.7141] },
        { "time": 0.7, "rotation": [-0.3, 0, 0, 0.9539] },
        { "time": 1.2, "rotation": [0, 0, 0, 1] }
      ]
    },
    "RightHand": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 0.3, "rotation": [0.1, 0, 0, 0.995] },
        { "time": 0.6, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.65, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.7, "rotation": [0, 0, 0, 1] },
        { "time": 1.2, "rotation": [0, 0, 0, 1] }
      ]
    },
    "Head": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 0.3, "rotation": [0.05, -0.1, 0, 0.9937] },
        { "time": 0.6, "rotation": [0.05, -0.1, 0, 0.9937] },
        { "time": 1.2, "rotation": [0, 0, 0, 1] }
      ]
    }
  },

  "events": [
    { "name": "DrawStart", "time": 0.0, "function": "OnDrawStart" },
    { "name": "DrawSound", "time": 0.1, "function": "PlaySound", "parameter": "bow_draw" },
    { "name": "FullDraw", "time": 0.6, "function": "OnFullDraw" },
    { "name": "Release", "time": 0.65, "function": "OnProjectileRelease" },
    { "name": "ReleaseSound", "time": 0.65, "function": "PlaySound", "parameter": "bow_release" },
    { "name": "AttackEnd", "time": 1.2, "function": "OnAttackEnd" }
  ],

  "rootMotion": {
    "enabled": false
  },

  "blending": {
    "blendInTime": 0.15,
    "blendOutTime": 0.25,
    "blendMode": "override"
  },

  "metadata": {
    "author": "Animation Team",
    "tags": ["combat", "attack", "ranged", "bow", "one_shot"]
  }
}
