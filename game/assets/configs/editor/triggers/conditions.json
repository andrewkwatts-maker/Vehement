    {
      "id": "boolean",
      "name": "Boolean Logic",
      "icon": "logic_icon"
    },
    {
      "id": "comparison",
      "name": "Comparisons",
      "icon": "compare_icon"
    },
    {
      "id": "unit",
      "name": "Unit Conditions",
      "icon": "unit_icon"
    },
    {
      "id": "player",
      "name": "Player Conditions",
