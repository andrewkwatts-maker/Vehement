{
  "backends": {
    "sqlite": {
      "enabled": true,
      "database_path": "editor_data.db",
      "enable_wal": true,
      "enable_fts": true,
      "cache_size": 10000,
      "max_versions_per_asset": 10
    },
    "firebase": {
      "enabled": false,
      "project_id": "nova3d-editor",
      "api_key": "YOUR_FIREBASE_API_KEY",
      "database_url": "https://nova3d-editor-default-rtdb.firebaseio.com",
      "auth_domain": "nova3d-editor.firebaseapp.com",
      "sync_interval": 30.0,
      "auto_sync": true,
      "conflict_resolution": "manual"
    }
  },
  "sync": {
    "auto_sync": true,
    "sync_interval": 30.0,
    "sync_in_background": true,
    "max_concurrent_syncs": 5,
    "sync_batch_size": 10,
    "conflict_resolution": "prefer_local"
  },
  "cache": {
    "enable_memory_cache": true,
    "max_cache_size_mb": 100
  }
}
