    "animationStateMachine": {
        "initialState": "hover",
        "states": {
            "hover": { "animation": "hover", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "prophecy", "condition": "isCasting" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "hover", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "hover", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "prophecy": { "animation": "prophecy", "transitions": [{ "to": "hover", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "prophecy_of_doom", "name": "Prophecy of Doom", "description": "Marks an enemy; after 8 seconds, they take massive damage.", "hotkey": "P", "cooldown": 45.0, "manaCost": 150 },
        { "id": "disaster_sight", "name": "Disaster Sight", "description": "Reveals an area and marks all enemies for increased damage.", "hotkey": "D", "cooldown": 30.0, "manaCost": 100 },
        { "id": "wing_dust", "name": "Wing Dust", "description": "Releases scales that confuse enemies.", "hotkey": "W", "cooldown": 25.0, "manaCost": 125 },
        { "id": "calamity", "name": "Calamity", "description": "When Mothman dies, triggers a disaster damaging all nearby enemies.", "isPassive": true },
        { "id": "harbinger_presence", "name": "Harbinger Presence", "description": "Nearby enemies have reduced armor.", "isPassive": true },
        { "id": "omen_of_ruin", "name": "Omen of Ruin", "description": "Calls down a catastrophic event at target location.", "hotkey": "O", "cooldown": 120.0, "manaCost": 250, "isUltimate": true }
    ],

    "behaviors": {
