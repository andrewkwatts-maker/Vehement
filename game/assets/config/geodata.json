{
  "version": "1.0.0",
  "description": "Geographic data configuration for Vehement2 real-world world generation",

  "osm": {
    "overpassEndpoint": "https://overpass-api.de/api/interpreter",
    "nominatimEndpoint": "https://nominatim.openstreetmap.org",
    "requestsPerSecond": 1.0,
    "burstSize": 2,
    "queryTimeout": 180,
    "httpTimeout": 60,
    "defaultZoom": 16,
    "fetchRelations": true,
    "fetchMetadata": false,
    "useJson": true
  },

  "elevation": {
    "openElevationEndpoint": "https://api.open-elevation.com/api/v1/lookup",
    "mapzenEndpoint": "",
    "srtmEndpoint": "",
    "requestsPerSecond": 1.0,
    "batchSize": 100,
    "defaultResolution": 30,
    "minResolution": 10,
    "maxResolution": 90,
    "localDEMPath": ""
  },

  "biome": {
    "climateDataPath": "",
    "useOnlineClimate": false,
    "urbanDensityThreshold": 0.3,
    "forestCoverThreshold": 0.4,
    "tropicLatitude": 23.5,
    "arcticLatitude": 66.5,
    "currentMonth": 6
  },

  "cache": {
    "cachePath": "geodata_cache",
    "maxMemoryCacheMB": 256,
    "maxDiskCacheMB": 1024,
    "defaultExpiryHours": 168,
    "enableDiskCache": true,
    "enableCompression": false
  },

  "world": {
    "worldOrigin": {
      "latitude": 37.7749,
      "longitude": -122.4194,
      "description": "San Francisco, CA - default world origin"
    },
    "worldScale": 1.0,
    "defaultZoom": 16,

    "processing": {
      "processRoads": true,
      "processBuildings": true,
      "processElevation": true,
      "processBiomes": true
    },

    "quality": {
      "elevationResolution": 30,
      "roadSimplifyTolerance": 1.0,
      "buildingSimplifyTolerance": 0.5
    }
  },

  "streaming": {
    "loadRadius": 3,
    "unloadRadius": 5,
    "maxConcurrentLoads": 4,
    "updateInterval": 0.5
  },

  "rendering": {
    "roadTextures": {
      "motorway": "textures/roads/motorway.png",
      "primary": "textures/roads/primary.png",
      "secondary": "textures/roads/secondary.png",
      "residential": "textures/roads/residential.png",
      "footway": "textures/roads/footway.png",
      "path": "textures/roads/path.png"
    },

    "buildingMaterials": {
      "brick": "textures/buildings/brick.png",
      "concrete": "textures/buildings/concrete.png",
      "glass": "textures/buildings/glass.png",
      "wood": "textures/buildings/wood.png"
    },

    "terrainTextures": {
      "grass": "textures/terrain/grass.png",
      "sand": "textures/terrain/sand.png",
      "rock": "textures/terrain/rock.png",
      "snow": "textures/terrain/snow.png",
      "forest": "textures/terrain/forest_floor.png",
      "urban": "textures/terrain/concrete.png"
    }
  },

  "locations": {
    "presets": [
      {
        "name": "San Francisco",
        "latitude": 37.7749,
        "longitude": -122.4194,
        "description": "San Francisco, California"
      },
      {
        "name": "New York",
        "latitude": 40.7128,
        "longitude": -74.0060,
        "description": "New York City, New York"
      },
      {
        "name": "London",
        "latitude": 51.5074,
        "longitude": -0.1278,
        "description": "London, United Kingdom"
      },
      {
        "name": "Tokyo",
        "latitude": 35.6762,
        "longitude": 139.6503,
        "description": "Tokyo, Japan"
      },
      {
        "name": "Paris",
        "latitude": 48.8566,
        "longitude": 2.3522,
        "description": "Paris, France"
      },
      {
        "name": "Sydney",
        "latitude": -33.8688,
        "longitude": 151.2093,
        "description": "Sydney, Australia"
      }
    ]
  },

  "dataFilters": {
    "roads": {
      "minLength": 5.0,
      "excludeTypes": ["steps", "construction"],
      "includePrivate": false
    },
    "buildings": {
      "minArea": 10.0,
      "excludeTypes": ["ruins", "construction"],
      "estimateHeights": true
    },
    "pois": {
      "maxPerTile": 500,
      "categories": []
    }
  },

  "apiKeys": {
    "description": "Add your API keys here if required by specific providers",
    "openElevation": "",
    "mapbox": "",
    "googleMaps": ""
  }
}
