        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "mothman_attack" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "mothman_calamity" }, { "type": "trigger_ability", "ability": "calamity" }] }
    }
