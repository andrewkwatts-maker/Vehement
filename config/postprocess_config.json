{
  "postprocess": {
    "version": "1.0",
    "description": "Nova3D Post-Processing Configuration",

    "enabled": true,
    "hdr_enabled": true,

    "bloom": {
      "enabled": true,
      "threshold": 1.0,
      "soft_threshold": 0.5,
      "intensity": 0.5,
      "radius": 1.0,
      "mip_levels": 5,
      "filter_radius": 0.005
    },

    "tone_mapping": {
      "enabled": true,
      "operator": "aces",
      "exposure": 1.0,
      "white_point": 11.2,
      "adaptation_speed": 2.0,
      "min_luminance": 0.1,
      "max_luminance": 10.0
    },

    "color_grading": {
      "enabled": true,
      "temperature": 0.0,
      "tint": 0.0,
      "saturation": 1.0,
      "contrast": 1.0,
      "brightness": 0.0,
      "lift": [0.0, 0.0, 0.0],
      "gamma": [1.0, 1.0, 1.0],
      "gain": [1.0, 1.0, 1.0],
      "lut_enabled": false,
      "lut_path": "",
      "lut_contribution": 1.0
    },

    "ambient_occlusion": {
      "enabled": true,
      "type": "ssao",
      "radius": 0.5,
      "bias": 0.025,
      "intensity": 1.0,
      "kernel_size": 64,
      "noise_size": 4,
      "blur_enabled": true,
      "blur_sharpness": 4.0
    },

    "motion_blur": {
      "enabled": false,
      "samples": 8,
      "intensity": 1.0,
      "max_blur": 0.05,
      "velocity_scale": 1.0,
      "camera_motion_blur": true,
      "object_motion_blur": true
    },

    "depth_of_field": {
      "enabled": false,
      "focus_distance": 10.0,
      "focus_range": 5.0,
      "bokeh_radius": 4.0,
      "aperture": 5.6,
      "focal_length": 50.0,
      "blur_quality": "high",
      "max_blur_size": 8.0
    },

    "chromatic_aberration": {
      "enabled": false,
      "intensity": 0.1,
      "radial_intensity": 1.0
    },

    "vignette": {
      "enabled": true,
      "intensity": 0.3,
      "smoothness": 0.5,
      "roundness": 1.0,
      "color": [0.0, 0.0, 0.0]
    },

    "film_grain": {
      "enabled": false,
      "intensity": 0.1,
      "response": 0.8,
      "colored": false
    },

    "sharpening": {
      "enabled": true,
      "intensity": 0.5,
      "clamp": 0.1
    },

    "anti_aliasing": {
      "type": "fxaa",
      "fxaa_quality": "high",
      "smaa_quality": "high",
      "taa_jitter_scale": 1.0,
      "taa_feedback": 0.95
    },

    "quality_presets": {
      "low": {
        "bloom_enabled": false,
        "ao_enabled": false,
        "motion_blur_enabled": false,
        "dof_enabled": false,
        "aa_type": "fxaa"
      },
      "medium": {
        "bloom_enabled": true,
        "bloom_mip_levels": 3,
        "ao_enabled": true,
        "ao_kernel_size": 32,
        "motion_blur_enabled": false,
        "dof_enabled": false,
        "aa_type": "fxaa"
      },
      "high": {
        "bloom_enabled": true,
        "bloom_mip_levels": 5,
        "ao_enabled": true,
        "ao_kernel_size": 64,
        "motion_blur_enabled": true,
        "dof_enabled": false,
        "aa_type": "smaa"
      },
      "ultra": {
        "bloom_enabled": true,
        "bloom_mip_levels": 6,
        "ao_enabled": true,
        "ao_kernel_size": 128,
        "motion_blur_enabled": true,
        "dof_enabled": true,
        "aa_type": "taa"
      }
    }
  }
}
