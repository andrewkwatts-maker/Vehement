{
  "graphics": {
    "version": "1.0",
    "description": "Nova3D Graphics Performance Configuration",

    "batching": {
      "enabled": true,
      "max_batch_size": 1000,
      "min_instances_for_batching": 2,
      "max_vertices_per_static_batch": 65535,
      "use_instanced_rendering": true,
      "use_persistent_mapping": true,
      "use_indirect_rendering": false,
      "batch_rebuild_interval": 1.0
    },

    "culling": {
      "frustum": true,
      "occlusion": true,
      "distance": 500.0,
      "small_object_threshold": 0.01,
      "occlusion_query_delay": 0.1,
      "occlusion_hierarchy_depth": 4,
      "occlusion_resolution": 256,
      "use_multi_threading": false,
      "num_culling_threads": 4
    },

    "lod": {
      "enabled": true,
      "distances": [50, 100, 200, 400, 800, 1600, 3200, 6400],
      "use_screen_size_metric": false,
      "screen_sizes": [0.5, 0.25, 0.125, 0.0625, 0.03, 0.015, 0.007, 0.003],
      "lod_bias": 0.0,
      "hysteresis": 1.1,
      "enable_crossfade": false,
      "crossfade_range": 10.0,
      "auto_generate_lods": false,
      "reduction_factors": [1.0, 0.5, 0.25, 0.125, 0.0625, 0.03, 0.015, 0.007]
    },

    "instancing": {
      "enabled": true,
      "min_instances": 10,
      "max_instances_per_batch": 1000,
      "use_ssbo": false
    },

    "texture_atlas": {
      "enabled": true,
      "max_size": 4096,
      "padding": 1,
      "generate_mipmaps": true,
      "allow_resize": true,
      "power_of_two": true,
      "use_compression": false,
      "compression_quality": 75,
      "use_array_texture": false,
      "max_layers": 16
    },

    "render_queue": {
      "sort_by_state": true,
      "sort_by_depth": true,
      "enable_instancing": true,
      "separate_transparent": true,
      "max_items_per_bucket": 10000,
      "shader_weight": 1.0,
      "material_weight": 0.5,
      "texture_weight": 0.25,
      "depth_weight": 0.1
    },

    "memory": {
      "mesh_streaming_enabled": false,
      "mesh_streaming_distance": 200.0,
      "texture_streaming_enabled": false,
      "texture_streaming_mip_bias": 0,
      "max_texture_memory_mb": 512,
      "max_mesh_memory_mb": 256,
      "buffer_pool_size_mb": 64
    },

    "gpu_optimization": {
      "reduce_state_changes": true,
      "sort_draw_calls": true,
      "use_persistent_buffers": true,
      "use_uniform_buffer_objects": true,
      "uniform_buffer_binding_point": 0,
      "use_shader_storage_buffers": false,
      "use_compute_shaders": false,
      "use_bindless_textures": false,
      "use_multi_draw_indirect": false
    },

    "quality_presets": {
      "low": {
        "batching_enabled": true,
        "culling_distance": 200.0,
        "lod_bias": 2.0,
        "texture_atlas_max_size": 2048,
        "occlusion_culling": false
      },
      "medium": {
        "batching_enabled": true,
        "culling_distance": 350.0,
        "lod_bias": 1.0,
        "texture_atlas_max_size": 4096,
        "occlusion_culling": true
      },
      "high": {
        "batching_enabled": true,
        "culling_distance": 500.0,
        "lod_bias": 0.0,
        "texture_atlas_max_size": 4096,
        "occlusion_culling": true
      },
      "ultra": {
        "batching_enabled": true,
        "culling_distance": 1000.0,
        "lod_bias": -0.5,
        "texture_atlas_max_size": 8192,
        "occlusion_culling": true
      }
    },

    "debug": {
      "show_culling_stats": false,
      "show_lod_levels": false,
      "show_batching_stats": false,
      "show_draw_calls": false,
      "wireframe_lod_colors": false,
      "highlight_batched_objects": false,
      "visualize_frustum": false,
      "visualize_occlusion": false,
      "log_performance_warnings": true,
      "performance_warning_threshold_ms": 16.67
    }
  }
}
