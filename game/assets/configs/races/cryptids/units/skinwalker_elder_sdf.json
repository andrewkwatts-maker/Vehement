    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "walk", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "transform", "condition": "isTransforming" }, { "to": "death", "condition": "isDead" }] },
            "walk": { "animation": "walk", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "transform", "condition": "isTransforming" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "walk", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "transform": { "animation": "transform", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "wolf_form", "name": "Wolf Form", "description": "Transforms into a swift wolf with increased speed and attack damage.", "hotkey": "W", "cooldown": 5.0, "manaCost": 30 },
        { "id": "bear_form", "name": "Bear Form", "description": "Transforms into a powerful bear with increased health and armor.", "hotkey": "B", "cooldown": 5.0, "manaCost": 30 },
        { "id": "crow_form", "name": "Crow Form", "description": "Transforms into a crow, gaining flight and scouting abilities.", "hotkey": "C", "cooldown": 5.0, "manaCost": 30 },
        { "id": "human_form", "name": "Human Form", "description": "Returns to humanoid form, restoring base stats.", "hotkey": "H", "cooldown": 5.0 },
        { "id": "terrifying_visage", "name": "Terrifying Visage", "description": "Reveals true form, causing fear in nearby enemies.", "hotkey": "T", "cooldown": 25.0, "manaCost": 75 },
        { "id": "essence_drain", "name": "Essence Drain", "description": "Drains essence from a target enemy.", "hotkey": "E", "cooldown": 15.0, "manaCost": 50 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "skinwalker_elder_ready" }, { "type": "random_say", "texts": ["*shifting sounds*", "*whispered incantation*", "*bones cracking*"], "chance": 1.0 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "skinwalker_elder_attack" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "skinwalker_elder_death" }] }
    }
}
