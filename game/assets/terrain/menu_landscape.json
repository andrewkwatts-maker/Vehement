      "end_distance": 400.0,
      "height_falloff": 0.03,
      "description": "Blue-tinted atmospheric haze"
    },

    "color_grading": {
      "distance_desaturation": {
        "start": 50.0,
        "end": 300.0,
        "amount": 0.7,
        "curve": "smoothstep"
      },
      "distance_blue_shift": {
        "start": 50.0,
        "end": 300.0,
        "amount": 0.3,
        "target_hue": 210.0,
        "curve": "smoothstep"
      },
      "distance_value_shift": {
        "start": 100.0,
        "end": 400.0,
        "amount": 0.15,
        "direction": "lighter",
