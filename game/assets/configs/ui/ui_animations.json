{
    "version": "1.0",
    "description": "UI Animation Definitions and Presets",

    "easings": {
        "linear": { "type": "linear" },
        "easeIn": { "type": "cubic-bezier", "values": [0.42, 0, 1, 1] },
        "easeOut": { "type": "cubic-bezier", "values": [0, 0, 0.58, 1] },
        "easeInOut": { "type": "cubic-bezier", "values": [0.42, 0, 0.58, 1] },
        "easeInQuad": { "type": "cubic-bezier", "values": [0.55, 0.085, 0.68, 0.53] },
        "easeOutQuad": { "type": "cubic-bezier", "values": [0.25, 0.46, 0.45, 0.94] },
        "easeInOutQuad": { "type": "cubic-bezier", "values": [0.455, 0.03, 0.515, 0.955] },
        "easeInCubic": { "type": "cubic-bezier", "values": [0.55, 0.055, 0.675, 0.19] },
        "easeOutCubic": { "type": "cubic-bezier", "values": [0.215, 0.61, 0.355, 1] },
        "easeInOutCubic": { "type": "cubic-bezier", "values": [0.645, 0.045, 0.355, 1] },
        "easeInQuart": { "type": "cubic-bezier", "values": [0.895, 0.03, 0.685, 0.22] },
        "easeOutQuart": { "type": "cubic-bezier", "values": [0.165, 0.84, 0.44, 1] },
        "easeInOutQuart": { "type": "cubic-bezier", "values": [0.77, 0, 0.175, 1] },
        "easeInBack": { "type": "cubic-bezier", "values": [0.6, -0.28, 0.735, 0.045] },
        "easeOutBack": { "type": "cubic-bezier", "values": [0.175, 0.885, 0.32, 1.275] },
        "easeInOutBack": { "type": "cubic-bezier", "values": [0.68, -0.55, 0.265, 1.55] },
        "easeOutElastic": { "type": "elastic", "amplitude": 1, "period": 0.3 },
        "easeOutBounce": { "type": "bounce" }
    },

    "animations": {
        "fadeIn": {
            "duration": 300,
            "easing": "easeOut",
            "keyframes": [
                { "offset": 0, "opacity": 0 },
                { "offset": 1, "opacity": 1 }
            ]
        },
        "fadeOut": {
            "duration": 300,
            "easing": "easeIn",
            "keyframes": [
                { "offset": 0, "opacity": 1 },
                { "offset": 1, "opacity": 0 }
            ]
        },
        "fadeInUp": {
            "duration": 400,
            "easing": "easeOutCubic",
            "keyframes": [
                { "offset": 0, "opacity": 0, "transform": "translateY(20px)" },
                { "offset": 1, "opacity": 1, "transform": "translateY(0)" }
            ]
        },
        "fadeInDown": {
            "duration": 400,
            "easing": "easeOutCubic",
            "keyframes": [
                { "offset": 0, "opacity": 0, "transform": "translateY(-20px)" },
                { "offset": 1, "opacity": 1, "transform": "translateY(0)" }
            ]
        },
        "fadeOutUp": {
            "duration": 300,
            "easing": "easeIn",
            "keyframes": [
                { "offset": 0, "opacity": 1, "transform": "translateY(0)" },
                { "offset": 1, "opacity": 0, "transform": "translateY(-20px)" }
            ]
        },
        "fadeOutDown": {
            "duration": 300,
            "easing": "easeIn",
            "keyframes": [
                { "offset": 0, "opacity": 1, "transform": "translateY(0)" },
                { "offset": 1, "opacity": 0, "transform": "translateY(20px)" }
            ]
        },

        "scaleIn": {
            "duration": 200,
            "easing": "easeOutBack",
            "keyframes": [
                { "offset": 0, "opacity": 0, "transform": "scale(0.8)" },
                { "offset": 1, "opacity": 1, "transform": "scale(1)" }
            ]
        },
        "scaleOut": {
            "duration": 150,
            "easing": "easeIn",
            "keyframes": [
                { "offset": 0, "opacity": 1, "transform": "scale(1)" },
                { "offset": 1, "opacity": 0, "transform": "scale(0.8)" }
            ]
        },
        "popIn": {
            "duration": 400,
            "easing": "easeOutElastic",
            "keyframes": [
                { "offset": 0, "opacity": 0, "transform": "scale(0.5)" },
                { "offset": 0.7, "transform": "scale(1.1)" },
                { "offset": 1, "opacity": 1, "transform": "scale(1)" }
            ]
        },

        "slideInLeft": {
            "duration": 300,
            "easing": "easeOutCubic",
            "keyframes": [
                { "offset": 0, "transform": "translateX(-100%)" },
                { "offset": 1, "transform": "translateX(0)" }
            ]
        },
        "slideInRight": {
            "duration": 300,
            "easing": "easeOutCubic",
            "keyframes": [
                { "offset": 0, "transform": "translateX(100%)" },
                { "offset": 1, "transform": "translateX(0)" }
            ]
        },
        "slideOutLeft": {
            "duration": 250,
            "easing": "easeIn",
            "keyframes": [
                { "offset": 0, "transform": "translateX(0)" },
                { "offset": 1, "transform": "translateX(-100%)" }
            ]
        },
        "slideOutRight": {
            "duration": 250,
            "easing": "easeIn",
            "keyframes": [
                { "offset": 0, "transform": "translateX(0)" },
                { "offset": 1, "transform": "translateX(100%)" }
            ]
        },

        "bounceIn": {
            "duration": 600,
            "easing": "easeOutBounce",
            "keyframes": [
                { "offset": 0, "opacity": 0, "transform": "scale(0.3)" },
                { "offset": 0.5, "transform": "scale(1.05)" },
                { "offset": 0.7, "transform": "scale(0.9)" },
                { "offset": 1, "opacity": 1, "transform": "scale(1)" }
            ]
        },

        "shake": {
            "duration": 500,
            "easing": "linear",
            "keyframes": [
                { "offset": 0, "transform": "translateX(0)" },
                { "offset": 0.1, "transform": "translateX(-5px)" },
                { "offset": 0.2, "transform": "translateX(5px)" },
                { "offset": 0.3, "transform": "translateX(-5px)" },
                { "offset": 0.4, "transform": "translateX(5px)" },
                { "offset": 0.5, "transform": "translateX(-5px)" },
                { "offset": 0.6, "transform": "translateX(5px)" },
                { "offset": 0.7, "transform": "translateX(-3px)" },
                { "offset": 0.8, "transform": "translateX(3px)" },
                { "offset": 0.9, "transform": "translateX(-1px)" },
                { "offset": 1, "transform": "translateX(0)" }
            ]
        },

        "pulse": {
            "duration": 300,
            "easing": "easeInOut",
            "keyframes": [
                { "offset": 0, "transform": "scale(1)" },
                { "offset": 0.5, "transform": "scale(1.1)" },
                { "offset": 1, "transform": "scale(1)" }
            ]
        },

        "heartbeat": {
            "duration": 1000,
            "easing": "linear",
            "iterations": "infinite",
            "keyframes": [
                { "offset": 0, "transform": "scale(1)" },
                { "offset": 0.14, "transform": "scale(1.3)" },
                { "offset": 0.28, "transform": "scale(1)" },
                { "offset": 0.42, "transform": "scale(1.3)" },
                { "offset": 0.70, "transform": "scale(1)" },
                { "offset": 1, "transform": "scale(1)" }
            ]
        },

        "flash": {
            "duration": 200,
            "easing": "linear",
            "keyframes": [
                { "offset": 0, "opacity": 1 },
                { "offset": 0.5, "opacity": 0.3 },
                { "offset": 1, "opacity": 1 }
            ]
        },

        "glow": {
            "duration": 2000,
            "easing": "easeInOut",
            "iterations": "infinite",
            "direction": "alternate",
            "keyframes": [
                { "offset": 0, "filter": "drop-shadow(0 0 0 transparent)" },
                { "offset": 1, "filter": "drop-shadow(0 0 10px rgba(74, 158, 255, 0.8))" }
            ]
        },

        "spin": {
            "duration": 1000,
            "easing": "linear",
            "iterations": "infinite",
            "keyframes": [
                { "offset": 0, "transform": "rotate(0deg)" },
                { "offset": 1, "transform": "rotate(360deg)" }
            ]
        },

        "float": {
            "duration": 3000,
            "easing": "easeInOut",
            "iterations": "infinite",
            "direction": "alternate",
            "keyframes": [
                { "offset": 0, "transform": "translateY(0)" },
                { "offset": 1, "transform": "translateY(-10px)" }
            ]
        },

        "shimmer": {
            "duration": 1500,
            "easing": "linear",
            "iterations": "infinite",
            "keyframes": [
                { "offset": 0, "backgroundPosition": "-200% 0" },
                { "offset": 1, "backgroundPosition": "200% 0" }
            ]
        }
    },

    "sequences": {
        "menuButtonHover": {
            "animations": [
                { "name": "pulse", "target": "self", "duration": 200 }
            ],
            "trigger": "hover"
        },
        "notificationEnter": {
            "animations": [
                { "name": "slideInRight", "target": "self" },
                { "name": "pulse", "target": ".notification-icon", "delay": 200 }
            ]
        },
        "achievementUnlock": {
            "animations": [
                { "name": "scaleIn", "target": "self", "duration": 400, "easing": "easeOutBack" },
                { "name": "glow", "target": ".achievement-icon", "delay": 300, "duration": 500 },
                { "name": "fadeIn", "target": ".achievement-text", "delay": 400 }
            ]
        },
        "levelUp": {
            "animations": [
                { "name": "flash", "target": "screen", "color": "#ffcc00" },
                { "name": "scaleIn", "target": ".level-up-badge" },
                { "name": "bounceIn", "target": ".level-number", "delay": 200 },
                { "name": "fadeInUp", "target": ".rewards-list", "delay": 400, "stagger": 100 }
            ]
        },
        "damageNumber": {
            "animations": [
                { "name": "popIn", "target": "self", "duration": 100 },
                { "name": "float", "target": "self", "duration": 500 },
                { "name": "fadeOut", "target": "self", "delay": 400 }
            ]
        },
        "itemPickup": {
            "animations": [
                { "name": "slideInRight", "target": "self" },
                { "name": "glow", "target": ".item-icon", "delay": 100 }
            ]
        },
        "questObjectiveComplete": {
            "animations": [
                { "name": "flash", "target": ".objective-checkbox" },
                { "name": "scaleIn", "target": ".checkmark", "easing": "easeOutBack" }
            ]
        }
    },

    "transitions": {
        "default": {
            "properties": ["opacity", "transform"],
            "duration": 300,
            "easing": "easeOut"
        },
        "fast": {
            "properties": ["all"],
            "duration": 150,
            "easing": "ease"
        },
        "slow": {
            "properties": ["all"],
            "duration": 500,
            "easing": "easeInOut"
        },
        "statBar": {
            "properties": ["width"],
            "duration": 300,
            "easing": "easeOutCubic"
        },
        "colorChange": {
            "properties": ["background-color", "border-color", "color"],
            "duration": 200,
            "easing": "ease"
        }
    },

    "gameEvents": {
        "onDamage": {
            "animation": "shake",
            "target": "healthBar",
            "flashColor": "#ff0000",
            "flashDuration": 100
        },
        "onHeal": {
            "animation": "pulse",
            "target": "healthBar",
            "flashColor": "#00ff00",
            "flashDuration": 150
        },
        "onManaUse": {
            "animation": "flash",
            "target": "manaBar"
        },
        "onAbilityReady": {
            "animation": "pulse",
            "target": ".ability-slot.ready",
            "sound": "ui_ability_ready"
        },
        "onCriticalHit": {
            "animation": "shake",
            "target": "screen",
            "intensity": 10,
            "duration": 200
        },
        "onLowHealth": {
            "animation": "heartbeat",
            "target": "healthBar",
            "threshold": 0.25,
            "persistent": true
        }
    },

    "presets": {
        "panels": {
            "show": "fadeIn",
            "hide": "fadeOut"
        },
        "modals": {
            "show": "scaleIn",
            "hide": "scaleOut"
        },
        "notifications": {
            "enter": "slideInRight",
            "exit": "slideOutRight"
        },
        "tooltips": {
            "show": "fadeIn",
            "hide": "fadeOut"
        },
        "menus": {
            "show": "fadeInUp",
            "hide": "fadeOutDown"
        },
        "dialogues": {
            "show": "fadeInUp",
            "hide": "fadeOut"
        }
    },

    "defaults": {
        "duration": 300,
        "easing": "easeOut",
        "fillMode": "forwards"
    }
}
