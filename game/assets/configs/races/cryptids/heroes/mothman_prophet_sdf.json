        { "id": "disaster_sight", "name": "Disaster Sight", "description": "Reveals an area and curses all enemies within.", "hotkey": "W", "cooldown": 20.0, "manaCost": 80 },
        { "id": "wing_dust_prophet", "name": "Wing Dust", "description": "Releases prophetic scales that slow and confuse enemies.", "hotkey": "E", "cooldown": 18.0, "manaCost": 90 },
        { "id": "calamity_call", "name": "Calamity", "description": "Calls down a prophesied disaster at target location.", "hotkey": "R", "cooldown": 150.0, "manaCost": 200, "isUltimate": true }
    ],

