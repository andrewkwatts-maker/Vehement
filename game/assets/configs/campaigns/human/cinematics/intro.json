{
  "$schema": "../../../../../schemas/cinematic.schema.json",
  "id": "cinematic_human_intro",
  "title": "The Last Alliance",
  "description": "Campaign introduction cinematic",

  "scenes": [
    {
      "id": "scene_darkness",
      "name": "Darkness Falls",
      "startTime": 0,
      "duration": 8,
      "camera": {
        "type": "pan",
        "keyframes": [
          {
            "time": 0,
            "position": { "x": 0, "y": 100, "z": 0 },
            "target": { "x": 0, "y": 0, "z": 50 },
            "fov": 60,
            "easing": "ease-in"
          },
          {
            "time": 8,
            "position": { "x": 0, "y": 50, "z": 100 },
            "target": { "x": 0, "y": 0, "z": 0 },
            "fov": 70,
            "easing": "ease-out"
          }
        ]
      },
      "dialogs": [
        {
          "characterId": "narrator",
          "characterName": "Narrator",
          "text": "For centuries, humanity prospered in blissful ignorance of the darkness lurking at the edges of the world.",
          "startTime": 1,
          "duration": 5,
          "showSubtitle": true,
          "position": "center"
        }
      ],
      "audioCues": [
        {
          "audioFile": "music/cinematic/ominous_intro.ogg",
          "startTime": 0,
          "volume": 0.8,
          "fadeIn": 2,
          "isMusic": true
        }
      ],
      "transitionIn": "fade",
      "transitionDuration": 1.5,
      "environment": {
        "timeOfDay": 22,
        "weather": "storm"
      }
    },
    {
      "id": "scene_awakening",
      "name": "The Awakening",
      "startTime": 8,
      "duration": 10,
      "camera": {
        "type": "pan",
        "keyframes": [
          {
            "time": 0,
            "position": { "x": -50, "y": 20, "z": 0 },
            "target": { "x": 0, "y": 0, "z": 0 },
            "fov": 50
          },
          {
            "time": 10,
            "position": { "x": 50, "y": 20, "z": 0 },
            "target": { "x": 0, "y": 0, "z": 0 },
            "fov": 50
          }
        ]
      },
      "dialogs": [
        {
          "characterId": "narrator",
          "text": "But the seals are breaking. Ancient horrors stir. The vampires have awoken from their millennium slumber.",
          "startTime": 0,
          "duration": 4,
          "showSubtitle": true
        },
        {
          "characterId": "narrator",
          "text": "The Naga emerge from the depths. Cryptids roam the wilderness. And the dead... the dead no longer rest.",
          "startTime": 5,
          "duration": 5,
          "showSubtitle": true
        }
      ],
      "effects": [
        {
          "effectId": "effect_ground_crack",
          "position": { "x": 0, "y": 0, "z": 0 },
          "startTime": 2,
          "duration": 3
        }
      ],
      "transitionOut": "crossfade",
      "transitionDuration": 1
    },
    {
      "id": "scene_alliance",
      "name": "The Call to Arms",
      "startTime": 18,
      "duration": 12,
      "camera": {
        "type": "orbit",
        "keyframes": [
          {
            "time": 0,
            "position": { "x": 0, "y": 30, "z": 50 },
            "target": { "x": 0, "y": 10, "z": 0 },
            "fov": 60
          },
          {
            "time": 12,
            "position": { "x": 50, "y": 30, "z": 0 },
            "target": { "x": 0, "y": 10, "z": 0 },
            "fov": 55
          }
        ]
      },
      "dialogs": [
        {
          "characterId": "commander_aldric",
          "characterName": "Commander Aldric",
          "text": "The kingdoms stand divided, each ruler blind to the true threat. We must unite them... or watch humanity fall.",
          "startTime": 1,
          "duration": 5,
          "portraitImage": "portraits/aldric_determined.png",
          "emotion": "determined",
          "position": "left"
        },
        {
          "characterId": "queen_helena",
          "characterName": "Queen Helena",
          "text": "Then let us forge an alliance such as this world has never seen. The Last Alliance of humanity.",
          "startTime": 7,
          "duration": 4,
          "portraitImage": "portraits/helena_regal.png",
          "emotion": "determined",
          "position": "right"
        }
      ],
      "audioCues": [
        {
          "audioFile": "music/cinematic/hope_rises.ogg",
          "startTime": 6,
          "volume": 0.9,
          "fadeIn": 1,
          "isMusic": true
        }
      ],
      "environment": {
        "timeOfDay": 6,
        "weather": "clear"
      }
    },
    {
      "id": "scene_title",
      "name": "Title Card",
      "startTime": 30,
      "duration": 5,
      "camera": {
        "type": "static"
      },
      "transitionIn": "fade",
      "transitionOut": "fade"
    }
  ],

  "titleCard": {
    "title": "THE LAST ALLIANCE",
    "subtitle": "Rise of the Human Empire",
    "duration": 5,
    "transitionIn": "fade",
    "transitionOut": "fade",
    "textColor": "#FFD700",
    "animationType": "fade-in"
  },

  "canSkip": true,
  "skipDelay": 3,
  "backgroundMusic": "music/human/theme_noble.ogg",
  "musicVolume": 0.7
}
