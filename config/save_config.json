{
  "save_system": {
    "version": "1.0",
    "description": "Nova3D Save System Configuration",

    "paths": {
      "save_directory": "saves/",
      "backup_directory": "saves/backups/",
      "cloud_sync_directory": "cloud/"
    },

    "slots": {
      "max_slots": 10,
      "auto_save_slot": -1,
      "quick_save_slots": 3
    },

    "auto_save": {
      "enabled": true,
      "interval_seconds": 300,
      "on_level_transition": true,
      "on_checkpoint": true,
      "on_important_event": true,
      "max_auto_saves": 3,
      "rotate_auto_saves": true
    },

    "backup": {
      "enabled": true,
      "max_backups_per_slot": 5,
      "backup_on_overwrite": true,
      "backup_on_version_upgrade": true
    },

    "compression": {
      "enabled": true,
      "algorithm": "zlib",
      "level": 6,
      "min_size_for_compression": 1024
    },

    "encryption": {
      "enabled": false,
      "algorithm": "aes256",
      "key_derivation": "pbkdf2",
      "iterations": 10000
    },

    "cloud_save": {
      "enabled": false,
      "provider": "steam",
      "sync_on_save": true,
      "sync_on_load": true,
      "conflict_resolution": "newest",
      "max_cloud_saves": 5
    },

    "versioning": {
      "current_version": 1,
      "min_compatible_version": 1,
      "allow_downgrade": false,
      "migration_enabled": true
    },

    "data_format": {
      "format": "binary",
      "use_checksums": true,
      "checksum_algorithm": "crc32",
      "include_metadata": true
    },

    "metadata": {
      "include_screenshot": true,
      "screenshot_width": 320,
      "screenshot_height": 180,
      "include_playtime": true,
      "include_timestamp": true,
      "include_location": true,
      "include_progress": true
    },

    "file_naming": {
      "pattern": "save_{slot}_{timestamp}",
      "extension": ".sav",
      "timestamp_format": "YYYYMMDD_HHmmss"
    },

    "limits": {
      "max_file_size_mb": 50,
      "max_total_size_mb": 500,
      "warn_threshold_mb": 400
    },

    "debug": {
      "log_save_operations": false,
      "log_load_operations": false,
      "validate_on_save": true,
      "validate_on_load": true,
      "allow_corrupted_loads": false
    }
  }
}
