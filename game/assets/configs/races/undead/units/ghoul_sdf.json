        { "id": "frenzy", "name": "Ghoul Frenzy", "description": "Increases attack speed for a short duration after consuming a corpse.", "hotkey": "F", "isToggle": false, "attackSpeedBonus": 0.5, "duration": 15.0, "isUpgrade": true }
