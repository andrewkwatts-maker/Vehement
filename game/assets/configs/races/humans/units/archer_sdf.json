        "on_attack": { "actions": [{ "type": "spawn_projectile", "projectile": "arrow", "target": "attack_target" }, { "type": "play_sound", "sound": "bow_release" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "archer_death" }] }
