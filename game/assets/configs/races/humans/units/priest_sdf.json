        { "id": "inner_fire", "name": "Inner Fire", "description": "Increases a unit's attack damage and armor.", "hotkey": "E", "cooldown": 0, "manaCost": 40, "range": 500, "targetType": "friendly_unit", "duration": 60.0, "damageBonus": 5, "armorBonus": 3 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "priest_ready" }] },
        "on_attack": { "actions": [{ "type": "spawn_projectile", "projectile": "holy_bolt", "target": "attack_target" }, { "type": "play_sound", "sound": "priest_attack" }] },
        "on_ability_heal": { "actions": [{ "type": "play_animation", "animation": "cast_heal" }, { "type": "spawn_effect", "effect": "heal_light", "target": "ability_target" }, { "type": "heal", "target": "ability_target", "amount": 100 }, { "type": "play_sound", "sound": "heal_cast" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "priest_death" }] }
    },

    "effects": {
