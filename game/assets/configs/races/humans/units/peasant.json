    "abilities": [
        {
            "id": "ability_gather",
            "name": "Gather",
            "description": "Harvest resources from resource nodes",
            "auto_cast": true
        },
        {
            "id": "ability_build",
            "name": "Build",
            "description": "Construct buildings for the kingdom",
            "hotkey": "B"
        },
        {
            "id": "ability_repair",
            "name": "Repair",
            "description": "Repair damaged buildings and siege weapons",
            "hotkey": "R",
            "cost_per_hp": {"gold": 0.5, "wood": 0.25}
        },
        {
            "id": "ability_call_to_arms",
            "name": "Call to Arms",
            "description": "Transform into Militia when Town Bell rings",
            "passive": true,
            "transforms_to": "human_militia",
            "duration": 60.0
        }
    ],

    "production": {
        "building": "human_town_hall",
        "cost": {
            "gold": 75,
            "food": 1
        },
        "build_time": 15.0,
        "population_cost": 1,
        "prerequisites": []
    },

    "ai": {
        "behaviorTree": "ai/behaviors/worker.bt",
        "profile": "passive",
        "flee_threshold": 0.3,
        "auto_gather": true
    },

    "animations": {
        "idle": {"path": "animations/humans/peasant/idle.anim", "loop": true},
        "walk": {"path": "animations/humans/peasant/walk.anim", "loop": true},
        "run": {"path": "animations/humans/peasant/run.anim", "loop": true},
        "gather_gold": {"path": "animations/humans/peasant/mine.anim", "loop": true},
        "gather_wood": {"path": "animations/humans/peasant/chop.anim", "loop": true},
