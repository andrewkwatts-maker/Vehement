{
  "type": "light",
  "version": "1.0",
  "name": "Torch",
  "description": "Flickering torch light with material function animation",
  "author": "Nova3D Team",
  "tags": ["point", "torch", "flickering", "fire"],

  "lightType": "point",
  "color": [1.0, 0.6, 0.3],
  "intensity": 10.0,
  "temperature": 1800.0,
  "useTemperature": true,

  "position": [0.0, 2.0, 0.0],
  "radius": 8.0,
  "falloff": "inverse-square",

  "castsShadows": true,
  "shadows": {
    "resolution": 512,
    "bias": 0.001,
    "normalBias": 0.02,
    "filterMode": "PCF",
    "softness": 1.0
  },

  "materialFunction": {
    "type": "flicker",
    "enabled": true,
    "frequency": 15.0,
    "amplitude": 0.3,
    "randomness": 0.5,
    "affectsIntensity": true,
    "affectsRadius": true,
    "affectsColor": false
  },

  "audioEmitter": {
    "sound": "assets/audio/sfx/torch_crackle.wav",
    "volume": 0.3,
    "looping": true,
    "spatial": true
  }
}
