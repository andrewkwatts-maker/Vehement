        { "id": "blood_drain", "name": "Blood Drain", "description": "Channels to drain life from target, healing self for damage dealt.", "damagePerSecond": 25, "healPercent": 1.0, "manaCost": 40, "cooldown": 8.0, "duration": 4.0, "range": 350, "hotkey": "Q" },
