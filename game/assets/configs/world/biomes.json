{
  "$schema": "../schemas/biome.schema.json",
  "version": "1.0.0",
  "biomes": {
    "temperate": {
      "id": "temperate",
      "name": "Temperate Forest",
      "description": "Moderate climate with deciduous and mixed forests",
      "color": "#2E8B57",
      "iconPath": "assets/icons/biomes/temperate.png",
      "climate": {
        "temperatureRange": [-10, 35],
        "humidityRange": [40, 80],
        "precipitationChance": 0.3
      },
      "terrain": {
        "primaryTypes": ["grass", "forest", "hills"],
        "treeTypes": ["oak", "maple", "birch", "pine"],
        "groundCover": ["grass", "fallen_leaves", "moss"]
      },
      "weather": {
        "possibleTypes": ["clear", "cloudy", "rain", "fog", "storm"],
        "seasonalVariation": true,
        "defaultType": "clear"
      },
      "resources": {
        "common": ["wood", "stone", "iron", "water"],
        "rare": ["gold", "silver"],
        "multipliers": {
          "wood": 1.5,
          "food": 1.2
        }
      },
      "spawning": {
        "hostileRate": 0.5,
        "friendlyRate": 0.8,
        "bossChance": 0.05,
        "unitTypes": ["wolf", "bear", "bandit", "deer", "rabbit"]
      },
      "ambience": {
        "soundscape": "forest_temperate",
        "particleEffects": ["leaves_falling", "fireflies_night"],
        "lightingProfile": "natural_forest"
      },
      "modifiers": {
        "movementSpeed": 1.0,
        "visibilityRange": 0.9,
        "staminaDrain": 1.0,
        "healingRate": 1.1
      }
    },
    "desert": {
      "id": "desert",
      "name": "Arid Desert",
      "description": "Hot, dry wasteland with sparse vegetation",
      "color": "#C2B280",
      "iconPath": "assets/icons/biomes/desert.png",
      "climate": {
        "temperatureRange": [15, 55],
        "humidityRange": [5, 25],
        "precipitationChance": 0.05
      },
      "terrain": {
        "primaryTypes": ["sand", "dunes", "rocky_desert", "canyon"],
        "treeTypes": ["cactus", "palm", "acacia"],
        "groundCover": ["sand", "gravel", "cracked_earth"]
      },
      "weather": {
        "possibleTypes": ["clear", "heatwave", "sandstorm", "dust_devil"],
        "seasonalVariation": false,
        "defaultType": "clear"
      },
      "resources": {
        "common": ["stone", "sand", "copper"],
        "rare": ["gold", "gems", "oil"],
        "multipliers": {
          "water": 0.2,
          "stone": 1.3
        }
      },
      "spawning": {
        "hostileRate": 0.6,
        "friendlyRate": 0.3,
        "bossChance": 0.08,
        "unitTypes": ["scorpion", "snake", "vulture", "nomad", "sand_elemental"]
      },
      "ambience": {
        "soundscape": "desert_wind",
        "particleEffects": ["sand_drift", "heat_shimmer"],
        "lightingProfile": "harsh_sun"
      },
      "modifiers": {
        "movementSpeed": 0.85,
        "visibilityRange": 1.2,
        "staminaDrain": 1.5,
        "healingRate": 0.8
      },
      "hazards": {
        "heatDamage": {
          "threshold": 40,
          "damagePerSecond": 1,
          "mitigatedBy": ["heat_resistance", "water_supply"]
        },
        "dehydration": {
          "waterConsumption": 2.0,
          "effects": ["slow", "damage_over_time"]
        }
      }
    },
    "arctic": {
      "id": "arctic",
      "name": "Frozen Tundra",
      "description": "Frozen wasteland with extreme cold",
      "color": "#E0FFFF",
      "iconPath": "assets/icons/biomes/arctic.png",
      "climate": {
        "temperatureRange": [-50, 5],
        "humidityRange": [20, 60],
        "precipitationChance": 0.4
      },
      "terrain": {
        "primaryTypes": ["snow", "ice", "frozen_lake", "glacier"],
        "treeTypes": ["pine", "spruce"],
        "groundCover": ["snow", "ice", "permafrost"]
      },
      "weather": {
        "possibleTypes": ["clear", "snow", "blizzard", "aurora", "whiteout"],
        "seasonalVariation": true,
        "defaultType": "snow"
      },
      "resources": {
        "common": ["ice", "stone", "fish"],
        "rare": ["diamond", "mythril", "frost_crystal"],
        "multipliers": {
          "wood": 0.3,
          "food": 0.5
        }
      },
      "spawning": {
        "hostileRate": 0.7,
        "friendlyRate": 0.2,
        "bossChance": 0.1,
        "unitTypes": ["polar_bear", "wolf_pack", "frost_giant", "ice_wraith"]
      },
      "ambience": {
        "soundscape": "arctic_wind",
        "particleEffects": ["snowfall", "breath_mist", "aurora_lights"],
        "lightingProfile": "cold_blue"
      },
      "modifiers": {
        "movementSpeed": 0.7,
        "visibilityRange": 0.6,
        "staminaDrain": 1.8,
        "healingRate": 0.6
      },
      "hazards": {
        "coldDamage": {
          "threshold": -20,
          "damagePerSecond": 2,
          "mitigatedBy": ["cold_resistance", "warm_clothing", "fire"]
        },
        "frostbite": {
          "exposureTime": 300,
          "effects": ["slow", "reduced_attack_speed"]
        }
      }
    },
    "tropical": {
      "id": "tropical",
      "name": "Tropical Rainforest",
      "description": "Dense, humid jungle with abundant life",
      "color": "#228B22",
      "iconPath": "assets/icons/biomes/tropical.png",
      "climate": {
        "temperatureRange": [20, 40],
        "humidityRange": [70, 100],
        "precipitationChance": 0.6
      },
      "terrain": {
        "primaryTypes": ["jungle", "swamp", "river", "waterfall"],
        "treeTypes": ["palm", "bamboo", "mangrove", "kapok"],
        "groundCover": ["ferns", "moss", "vines", "flowers"]
      },
      "weather": {
        "possibleTypes": ["humid", "rain", "thunderstorm", "monsoon", "fog"],
        "seasonalVariation": true,
        "defaultType": "humid"
      },
      "resources": {
        "common": ["wood", "water", "herbs", "fruit"],
        "rare": ["exotic_flowers", "poison", "ancient_relics"],
        "multipliers": {
          "wood": 2.0,
          "food": 1.8,
          "herbs": 2.5
        }
      },
      "spawning": {
        "hostileRate": 0.8,
        "friendlyRate": 0.6,
        "bossChance": 0.07,
        "unitTypes": ["jaguar", "snake", "piranha", "tribal_warrior", "ancient_guardian"]
      },
      "ambience": {
        "soundscape": "jungle_ambient",
        "particleEffects": ["rain_drips", "insects", "pollen"],
        "lightingProfile": "dappled_sunlight"
      },
      "modifiers": {
        "movementSpeed": 0.75,
        "visibilityRange": 0.5,
        "staminaDrain": 1.3,
        "healingRate": 1.0
      },
      "hazards": {
        "disease": {
          "infectionChance": 0.1,
          "effects": ["poison", "weakness"],
          "mitigatedBy": ["disease_resistance", "antidote"]
        },
        "predators": {
          "ambushChance": 0.15
        }
      }
    },
    "mountain": {
      "id": "mountain",
      "name": "Mountain Range",
      "description": "Towering peaks with treacherous terrain",
      "color": "#808080",
      "iconPath": "assets/icons/biomes/mountain.png",
      "climate": {
        "temperatureRange": [-30, 20],
        "humidityRange": [30, 70],
        "precipitationChance": 0.35
      },
      "terrain": {
        "primaryTypes": ["mountain", "cliff", "cave", "plateau"],
        "treeTypes": ["pine", "fir"],
        "groundCover": ["rock", "gravel", "alpine_grass"]
      },
      "weather": {
        "possibleTypes": ["clear", "cloudy", "snow", "lightning", "avalanche_risk"],
        "seasonalVariation": true,
        "defaultType": "cloudy"
      },
      "resources": {
        "common": ["stone", "iron", "copper"],
        "rare": ["mythril", "gems", "dragon_ore"],
        "multipliers": {
          "stone": 2.0,
          "iron": 1.8,
          "gems": 1.5
        }
      },
      "spawning": {
        "hostileRate": 0.6,
        "friendlyRate": 0.4,
        "bossChance": 0.12,
        "unitTypes": ["mountain_goat", "eagle", "rock_golem", "dwarf", "dragon"]
      },
      "ambience": {
        "soundscape": "mountain_wind",
        "particleEffects": ["snow_peaks", "eagles_circling"],
        "lightingProfile": "alpine_clear"
      },
      "modifiers": {
        "movementSpeed": 0.6,
        "visibilityRange": 1.5,
        "staminaDrain": 2.0,
        "healingRate": 0.9
      },
      "hazards": {
        "altitude": {
          "effectAbove": 3000,
          "effects": ["stamina_drain", "slow"],
          "mitigatedBy": ["mountain_training", "oxygen_supply"]
        },
        "rockfall": {
          "chance": 0.05,
          "damage": 50
        }
      }
    },
    "volcanic": {
      "id": "volcanic",
      "name": "Volcanic Wasteland",
      "description": "Active volcanic region with lava flows",
      "color": "#8B0000",
      "iconPath": "assets/icons/biomes/volcanic.png",
      "climate": {
        "temperatureRange": [30, 80],
        "humidityRange": [10, 40],
        "precipitationChance": 0.1
      },
      "terrain": {
        "primaryTypes": ["lava_field", "obsidian", "ash_plain", "crater"],
        "treeTypes": [],
        "groundCover": ["ash", "obsidian_shards", "cooled_lava"]
      },
      "weather": {
        "possibleTypes": ["ash_fall", "fire_rain", "toxic_cloud", "eruption"],
        "seasonalVariation": false,
        "defaultType": "ash_fall"
      },
      "resources": {
        "common": ["obsidian", "sulfur", "fire_stone"],
        "rare": ["dragon_ore", "phoenix_feather", "core_crystal"],
        "multipliers": {
          "fire_stone": 3.0,
          "obsidian": 2.5
        }
      },
      "spawning": {
        "hostileRate": 0.9,
        "friendlyRate": 0.1,
        "bossChance": 0.15,
        "unitTypes": ["fire_elemental", "lava_golem", "ash_zombie", "phoenix", "demon"]
      },
      "ambience": {
        "soundscape": "volcanic_rumble",
        "particleEffects": ["ash_fall", "embers", "lava_bubbles"],
        "lightingProfile": "hellfire_glow"
      },
      "modifiers": {
        "movementSpeed": 0.5,
        "visibilityRange": 0.4,
        "staminaDrain": 2.5,
        "healingRate": 0.5
      },
      "hazards": {
        "fireDamage": {
          "threshold": 0,
          "damagePerSecond": 3,
          "mitigatedBy": ["fire_resistance", "lava_boots"]
        },
        "toxicGas": {
          "damagePerSecond": 1,
          "mitigatedBy": ["gas_mask", "poison_immunity"]
        }
      }
    },
    "swamp": {
      "id": "swamp",
      "name": "Murky Swampland",
      "description": "Waterlogged marshes shrouded in mist",
      "color": "#556B2F",
      "iconPath": "assets/icons/biomes/swamp.png",
      "climate": {
        "temperatureRange": [10, 35],
        "humidityRange": [80, 100],
        "precipitationChance": 0.5
      },
      "terrain": {
        "primaryTypes": ["marsh", "bog", "murky_water", "dead_forest"],
        "treeTypes": ["willow", "cypress", "dead_tree"],
        "groundCover": ["mud", "reeds", "lily_pads", "moss"]
      },
      "weather": {
        "possibleTypes": ["fog", "drizzle", "rain", "miasma"],
        "seasonalVariation": false,
        "defaultType": "fog"
      },
      "resources": {
        "common": ["herbs", "poison", "peat", "fish"],
        "rare": ["will_o_wisp", "witch_ingredient", "bog_iron"],
        "multipliers": {
          "herbs": 2.0,
          "poison": 2.5
        }
      },
      "spawning": {
        "hostileRate": 0.75,
        "friendlyRate": 0.3,
        "bossChance": 0.08,
        "unitTypes": ["swamp_creature", "will_o_wisp", "witch", "giant_frog", "zombie"]
      },
      "ambience": {
        "soundscape": "swamp_ambient",
        "particleEffects": ["mist", "fireflies", "bubbles"],
        "lightingProfile": "murky_green"
      },
      "modifiers": {
        "movementSpeed": 0.55,
        "visibilityRange": 0.4,
        "staminaDrain": 1.6,
        "healingRate": 0.7
      },
      "hazards": {
        "disease": {
          "infectionChance": 0.15,
          "effects": ["poison", "slow"]
        },
        "quicksand": {
          "detectionDifficulty": 0.7,
          "escapeTime": 5
        }
      }
    },
    "coastal": {
      "id": "coastal",
      "name": "Coastal Region",
      "description": "Beaches and shorelines where land meets sea",
      "color": "#4682B4",
      "iconPath": "assets/icons/biomes/coastal.png",
      "climate": {
        "temperatureRange": [5, 30],
        "humidityRange": [60, 90],
        "precipitationChance": 0.3
      },
      "terrain": {
        "primaryTypes": ["beach", "rocky_shore", "tide_pools", "dunes"],
        "treeTypes": ["palm", "sea_grape"],
        "groundCover": ["sand", "shells", "seaweed"]
      },
      "weather": {
        "possibleTypes": ["clear", "sea_fog", "rain", "hurricane"],
        "seasonalVariation": true,
        "defaultType": "clear"
      },
      "resources": {
        "common": ["fish", "salt", "shells", "driftwood"],
        "rare": ["pearls", "coral", "treasure"],
        "multipliers": {
          "fish": 2.5,
          "salt": 2.0
        }
      },
      "spawning": {
        "hostileRate": 0.4,
        "friendlyRate": 0.7,
        "bossChance": 0.06,
        "unitTypes": ["crab", "seagull", "pirate", "sea_serpent", "mermaid"]
      },
      "ambience": {
        "soundscape": "ocean_waves",
        "particleEffects": ["sea_spray", "seagulls"],
        "lightingProfile": "coastal_sun"
      },
      "modifiers": {
        "movementSpeed": 0.9,
        "visibilityRange": 1.3,
        "staminaDrain": 1.0,
        "healingRate": 1.2
      }
    },
    "plains": {
      "id": "plains",
      "name": "Open Plains",
      "description": "Wide open grasslands and prairies",
      "color": "#9ACD32",
      "iconPath": "assets/icons/biomes/plains.png",
      "climate": {
        "temperatureRange": [-5, 35],
        "humidityRange": [30, 60],
        "precipitationChance": 0.25
      },
      "terrain": {
        "primaryTypes": ["grassland", "prairie", "savanna", "farmland"],
        "treeTypes": ["oak_sparse", "acacia"],
        "groundCover": ["tall_grass", "wildflowers", "wheat"]
      },
      "weather": {
        "possibleTypes": ["clear", "windy", "rain", "tornado"],
        "seasonalVariation": true,
        "defaultType": "clear"
      },
      "resources": {
        "common": ["grain", "livestock", "clay"],
        "rare": ["wild_horses", "bison_hide"],
        "multipliers": {
          "food": 2.0,
          "grain": 2.5
        }
      },
      "spawning": {
        "hostileRate": 0.3,
        "friendlyRate": 0.9,
        "bossChance": 0.03,
        "unitTypes": ["wolf", "bison", "hawk", "centaur", "farmer"]
      },
      "ambience": {
        "soundscape": "prairie_wind",
        "particleEffects": ["grass_sway", "butterflies"],
        "lightingProfile": "golden_hour"
      },
      "modifiers": {
        "movementSpeed": 1.2,
        "visibilityRange": 1.5,
        "staminaDrain": 0.8,
        "healingRate": 1.1
      }
    },
    "cursed": {
      "id": "cursed",
      "name": "Cursed Lands",
      "description": "Dark, corrupted territory touched by evil",
      "color": "#4B0082",
      "iconPath": "assets/icons/biomes/cursed.png",
      "climate": {
        "temperatureRange": [0, 25],
        "humidityRange": [40, 70],
        "precipitationChance": 0.4
      },
      "terrain": {
        "primaryTypes": ["corrupted_ground", "dead_forest", "bone_field", "shadow_realm"],
        "treeTypes": ["dead_tree", "corrupted_oak"],
        "groundCover": ["withered_grass", "bones", "shadow_mist"]
      },
      "weather": {
        "possibleTypes": ["eternal_twilight", "blood_rain", "shadow_storm", "eclipse"],
        "seasonalVariation": false,
        "defaultType": "eternal_twilight"
      },
      "resources": {
        "common": ["dark_essence", "bones", "corrupted_iron"],
        "rare": ["soul_gem", "void_crystal", "necromancer_tome"],
        "multipliers": {
          "dark_essence": 3.0,
          "soul_gem": 2.0
        }
      },
      "spawning": {
        "hostileRate": 0.95,
        "friendlyRate": 0.05,
        "bossChance": 0.2,
        "unitTypes": ["skeleton", "ghost", "vampire", "lich", "death_knight"]
      },
      "ambience": {
        "soundscape": "cursed_whispers",
        "particleEffects": ["shadow_wisps", "ghostly_figures"],
        "lightingProfile": "dark_purple"
      },
      "modifiers": {
        "movementSpeed": 0.8,
        "visibilityRange": 0.5,
        "staminaDrain": 1.4,
        "healingRate": 0.4
      },
      "hazards": {
        "corruption": {
          "spreadRate": 0.01,
          "effects": ["sanity_drain", "dark_transformation"],
          "mitigatedBy": ["holy_protection", "purity_amulet"]
        },
        "undead_rising": {
          "chanceOnDeath": 0.3
        }
      }
    }
  },
  "biomeTransitions": {
    "temperate_to_arctic": {
      "transitionZoneWidth": 5,
      "blendType": "gradient",
      "intermediateType": "taiga"
    },
    "temperate_to_desert": {
      "transitionZoneWidth": 3,
      "blendType": "gradient",
      "intermediateType": "scrubland"
    },
    "coastal_to_tropical": {
      "transitionZoneWidth": 2,
      "blendType": "sharp"
    },
    "mountain_to_volcanic": {
      "transitionZoneWidth": 4,
      "blendType": "gradient",
      "intermediateType": "ashen_slopes"
    }
  },
  "seasonalModifiers": {
    "spring": {
      "temperatureModifier": 0,
      "growthRate": 1.5,
      "spawnRateModifier": 1.2
    },
    "summer": {
      "temperatureModifier": 10,
      "growthRate": 1.0,
      "spawnRateModifier": 1.0
    },
    "autumn": {
      "temperatureModifier": -5,
      "growthRate": 0.5,
      "spawnRateModifier": 0.8
    },
    "winter": {
      "temperatureModifier": -15,
      "growthRate": 0.1,
      "spawnRateModifier": 0.6
    }
  }
}
