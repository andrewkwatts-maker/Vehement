                { "time": 1.2, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "barrier": {
            "duration": 3.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "position": [0.0, 1.2, 0.0] } } },
                { "time": 0.3, "bones": { "body": { "position": [0.0, 1.15, 0.0] } }, "events": ["barrier_activate"] },
                { "time": 2.7, "bones": { "body": { "position": [0.0, 1.15, 0.0] } } },
                { "time": 3.0, "bones": { "body": { "position": [0.0, 1.2, 0.0] } } }
            ]
        },
        "death": {
            "duration": 2.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.6, "bones": { "root": { "position": [0.0, -0.3, 0.0], "rotation": [0.15, 0.0, 0.1, 0.98] } }, "events": ["explosion_small"] },
                { "time": 1.2, "bones": { "root": { "position": [0.0, -0.6, 0.15], "rotation": [0.3, 0.0, 0.2, 0.93] } } },
                { "time": 2.0, "bones": { "root": { "position": [0.0, -0.9, 0.25], "rotation": [0.5, 0.0, 0.25, 0.83] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "walk", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "barrier", "condition": "isBarrierActive" }, { "to": "death", "condition": "isDead" }] },
            "walk": { "animation": "walk", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "barrier", "condition": "isBarrierActive" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "walk", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "barrier": { "animation": "barrier", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "hardened_shields", "name": "Hardened Shields", "description": "Caps incoming damage at 10 while shields active.", "type": "passive" },
        { "id": "barrier", "name": "Barrier", "description": "Activates barrier absorbing 100 damage for 3 seconds.", "hotkey": "B", "cooldown": 32.0 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "immortal_online" }, { "type": "spawn_effect", "effect": "warp_in_heavy", "duration": 1.5 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "phase_disruptor_fire" }, { "type": "spawn_projectile", "projectile": "phase_disruptor_heavy" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "immortal_death" }, { "type": "spawn_effect", "effect": "walker_explosion" }] }
    },

    "effects": {
        "warp_in_heavy": { "type": "flash", "color": [0.3, 0.7, 1.0, 0.9], "duration": 1.5 },
        "barrier_effect": { "type": "sphere", "radius": 1.5, "color": [0.3, 0.7, 1.0, 0.5], "duration": 3.0 },
        "walker_explosion": { "type": "explosion", "radius": 2.0, "color": [0.35, 0.65, 0.9, 0.8], "particles": { "type": "metal_debris", "count": 50, "color": [0.5, 0.55, 0.6, 1.0] } }
