{
    // Grass Tile Configuration
    // Basic terrain type - walkable and buildable

    "id": "tile_grass",
    "type": "tile",
    "name": "Grass",
    "description": "Lush grassland suitable for building and farming.",

    "tags": ["terrain", "natural", "buildable", "farmable"],

    "tileTypeId": 1,
    "displayName": "Grassland",
    "category": "terrain",

    // Visual Configuration
    "model": {
        "path": "models/tiles/hex_grass.obj",
        "scale": [1.0, 1.0, 1.0]
    },

    "texture": "textures/terrain/grass_diffuse.png",
    "textures": {
        "diffuse": "textures/terrain/grass_diffuse.png",
        "normal": "textures/terrain/grass_normal.png"
    },

    "material": {
        "diffuse": "textures/terrain/grass_diffuse.png",
        "normal": "textures/terrain/grass_normal.png",
        "roughness": 0.9,
        "uvScale": [4.0, 4.0]
    },

    // No collision for floor tiles
    "collision": {
        "type": "none"
    },

    // Movement Properties
    "walkable": true,
    "buildable": true,
    "blocksSight": false,
    "blocksProjectiles": false,
    "movementCost": 1.0,

    // Unit-class specific movement costs
    "movementCosts": {
        "infantry": 1.0,
        "cavalry": 0.9,
        "vehicle": 1.2,
        "flying": 1.0
    },

    // Environment
    "speedModifier": 1.0,
    "concealment": 0.1,

    // Resource yield - Can be farmed
    "resource": {
        "type": "food",
        "amount": 5,
        "regenRate": 0.1,
        "maxAmount": 100,
        "depletes": false
    },

    // Visual Variants for variety
    "variants": [
        {
            "id": "grass_default",
            "texture": "textures/terrain/grass_diffuse.png",
            "weight": 1.0
        },
        {
            "id": "grass_flowers",
            "texture": "textures/terrain/grass_flowers.png",
            "weight": 0.2,
            "tint": [1.0, 1.0, 1.0, 1.0]
        },
        {
            "id": "grass_dark",
            "texture": "textures/terrain/grass_dark.png",
            "weight": 0.3,
            "tint": [0.85, 0.9, 0.8, 1.0]
        },
        {
            "id": "grass_dry",
            "texture": "textures/terrain/grass_dry.png",
            "weight": 0.15,
            "tint": [1.1, 1.0, 0.85, 1.0]
        }
    ],

    // Transition rules to other tile types
    "transitions": [
        {
            "adjacentType": "tile_water",
            "model": "models/tiles/grass_water_edge.obj",
            "texture": "textures/terrain/grass_water_transition.png",
            "priority": 10
        },
        {
            "adjacentType": "tile_road",
            "texture": "textures/terrain/grass_road_transition.png",
            "priority": 5
        },
        {
            "adjacentType": "tile_forest",
            "texture": "textures/terrain/grass_forest_transition.png",
            "priority": 3
        }
    ],

    // Animation - Subtle wind effect
    "animation": {
        "type": "vertex_wave",
        "speed": 0.5,
        "waveAmplitude": 0.02,
        "waveFrequency": 2.0
    },

    // Lighting
    "light": {
        "emission": 0.0
    },

    // Audio
    "sounds": {
        "footstep": "sounds/footsteps/grass.wav",
        "ambient": "sounds/ambient/wind_grass.wav",
        "ambientVolume": 0.3
    },

    // Python Script Hooks
    "scripts": {
        "on_enter": "scripts/tiles/grass/on_enter.py",
        "on_exit": "scripts/tiles/grass/on_exit.py"
    },

    // Custom Properties
    "properties": {
        "seasonalVariation": true,
        "canCatchFire": true,
        "fireSpreadChance": 0.3,
        "fertilityLevel": 1.0
    }
}
