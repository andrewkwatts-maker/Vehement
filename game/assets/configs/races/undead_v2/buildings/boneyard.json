  "isUnique": false,
  "maxCount": 6,
  "canRally": true,
  "canUpgrade": false,

  "visuals": {
    "model": "models/races/undead/buildings/boneyard.obj",
    "icon": "textures/races/undead/icons/buildings/boneyard.png",
    "textures": {
      "diffuse": "textures/races/undead/buildings/boneyard_diffuse.png",
      "normal": "textures/races/undead/buildings/boneyard_normal.png",
      "emissive": "textures/races/undead/buildings/boneyard_emissive.png"
    },
    "constructionStages": 4,
    "hasDestructionAnimation": true,
    "smokeWhenDamaged": false,
    "blightWhenDamaged": true,
    "damageThreshold": 0.5
  },

  "sounds": {
    "select": ["sounds/undead/boneyard/select.wav"],
    "complete": ["sounds/undead/boneyard/complete.wav"],
    "destroyed": ["sounds/undead/boneyard/destroyed.wav"],
    "forge": ["sounds/undead/boneyard/forge.wav"]
  },

  "visionRange": 12.0,

  "blightProperties": {
    "createsBlight": false,
    "requiresBlight": true
  }
