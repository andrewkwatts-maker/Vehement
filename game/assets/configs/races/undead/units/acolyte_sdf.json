    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "walk", "condition": "isMoving" }, { "to": "harvest", "condition": "isHarvesting" }, { "to": "summon", "condition": "isSummoning" }, { "to": "sacrifice", "condition": "isSacrificing" }, { "to": "death", "condition": "isDead" }] },
            "walk": { "animation": "walk", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "death", "condition": "isDead" }] },
            "harvest": { "animation": "harvest", "transitions": [{ "to": "idle", "condition": "!isHarvesting" }, { "to": "death", "condition": "isDead" }] },
            "summon": { "animation": "summon", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "sacrifice": { "animation": "sacrifice", "transitions": [{ "to": "death", "condition": "animationComplete" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "summon_building", "name": "Summon Building", "description": "Begins a dark ritual to summon an undead structure from the ground.", "hotkey": "B", "isToggle": false },
        { "id": "sacrifice", "name": "Sacrifice", "description": "Sacrifices the acolyte to restore mana to a nearby hero.", "hotkey": "C", "isToggle": false, "manaRestored": 150 },
        { "id": "unsummon", "name": "Unsummon", "description": "Unsummons a building, returning resources.", "hotkey": "U", "isToggle": false, "resourceReturn": 0.5 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "acolyte_ready" }, { "type": "random_say", "texts": ["The shadows serve me.", "I await your command.", "What is thy bidding?"], "chance": 1.0 }] },
        "on_harvest": { "actions": [{ "type": "play_animation", "animation": "harvest" }, { "type": "play_sound", "sound": "acolyte_harvest" }] },
        "on_summon": { "actions": [{ "type": "play_animation", "animation": "summon" }, { "type": "play_sound", "sound": "unholy_ritual" }, { "type": "spawn_particles", "effect": "dark_summoning" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "acolyte_death" }, { "type": "spawn_particles", "effect": "soul_release" }] }
