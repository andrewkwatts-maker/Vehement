        { "id": "pounce", "name": "Pounce", "description": "Leaps at a target, dealing bonus damage and briefly stunning.", "hotkey": "P", "cooldown": 12.0 },
        { "id": "taste_blood", "name": "Taste Blood", "description": "Gains attack speed when attacking injured targets.", "isPassive": true },
        { "id": "evasion", "name": "Evasion", "description": "Has a chance to dodge incoming attacks.", "isPassive": true }
    ],

