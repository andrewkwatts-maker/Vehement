{
  "$schema": "../../schemas/animation_clip.schema.json",
  "id": "anim_run",
  "name": "Run",
  "description": "Running animation with faster footstep events",
  "version": "1.0",
  "duration": 0.6,
  "frameRate": 30,
  "looping": true,
  "playbackSpeed": 1.0,
  "skeleton": "humanoid_standard",

  "bones": {
    "Root": {
      "enabled": true,
      "interpolation": "linear",
      "keyframes": [
        { "time": 0.0, "position": [0, 0, 0], "rotation": [0, 0, 0, 1] },
        { "time": 0.15, "position": [0, 0.05, 0.375], "rotation": [0, 0, 0, 1] },
        { "time": 0.3, "position": [0, 0, 0.75], "rotation": [0, 0, 0, 1] },
        { "time": 0.45, "position": [0, 0.05, 1.125], "rotation": [0, 0, 0, 1] },
        { "time": 0.6, "position": [0, 0, 1.5], "rotation": [0, 0, 0, 1] }
      ]
    },
    "Spine": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.08, 0, -0.04, 0.996] },
        { "time": 0.15, "rotation": [0.08, 0, 0.04, 0.996] },
        { "time": 0.3, "rotation": [0.08, 0, -0.04, 0.996] },
        { "time": 0.45, "rotation": [0.08, 0, 0.04, 0.996] },
        { "time": 0.6, "rotation": [0.08, 0, -0.04, 0.996] }
      ]
    },
    "LeftUpLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.45, 0, 0, 0.893] },
        { "time": 0.15, "rotation": [0.25, 0, 0, 0.9682] },
        { "time": 0.3, "rotation": [0.45, 0, 0, 0.893] },
        { "time": 0.45, "rotation": [0.2, 0, 0, 0.9798] },
        { "time": 0.6, "rotation": [-0.45, 0, 0, 0.893] }
      ]
    },
    "LeftLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.6, 0, 0, 0.8] },
        { "time": 0.15, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.3, "rotation": [0.0, 0, 0, 1] },
        { "time": 0.45, "rotation": [0.5, 0, 0, 0.866] },
        { "time": 0.6, "rotation": [0.6, 0, 0, 0.8] }
      ]
    },
    "RightUpLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.45, 0, 0, 0.893] },
        { "time": 0.15, "rotation": [0.2, 0, 0, 0.9798] },
        { "time": 0.3, "rotation": [-0.45, 0, 0, 0.893] },
        { "time": 0.45, "rotation": [0.25, 0, 0, 0.9682] },
        { "time": 0.6, "rotation": [0.45, 0, 0, 0.893] }
      ]
    },
    "RightLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.0, 0, 0, 1] },
        { "time": 0.15, "rotation": [0.5, 0, 0, 0.866] },
        { "time": 0.3, "rotation": [0.6, 0, 0, 0.8] },
        { "time": 0.45, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.6, "rotation": [0.0, 0, 0, 1] }
      ]
    },
    "LeftArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.35, 0, 0.15, 0.925] },
        { "time": 0.3, "rotation": [-0.35, 0, 0.15, 0.925] },
        { "time": 0.6, "rotation": [0.35, 0, 0.15, 0.925] }
      ]
    },
    "LeftForeArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.5, 0, 0, 0.866] },
        { "time": 0.3, "rotation": [-0.3, 0, 0, 0.9539] },
        { "time": 0.6, "rotation": [-0.5, 0, 0, 0.866] }
      ]
    },
    "RightArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.35, 0, -0.15, 0.925] },
        { "time": 0.3, "rotation": [0.35, 0, -0.15, 0.925] },
        { "time": 0.6, "rotation": [-0.35, 0, -0.15, 0.925] }
      ]
    },
    "RightForeArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.3, 0, 0, 0.9539] },
        { "time": 0.3, "rotation": [-0.5, 0, 0, 0.866] },
        { "time": 0.6, "rotation": [-0.3, 0, 0, 0.9539] }
      ]
    }
  },

  "events": [
    { "name": "FootstepLeft", "time": 0.0, "function": "PlayFootstep", "parameter": "left", "floatParameter": 0.8 },
    { "name": "FootstepRight", "time": 0.3, "function": "PlayFootstep", "parameter": "right", "floatParameter": 0.8 }
  ],

  "rootMotion": {
    "enabled": true,
    "extractPosition": { "x": false, "y": false, "z": true },
    "extractRotation": { "x": false, "y": true, "z": false },
    "rootBone": "Root",
    "lockY": true
  },

  "blending": {
    "blendInTime": 0.15,
    "blendOutTime": 0.15,
    "blendMode": "override"
  },

  "metadata": {
    "author": "Animation Team",
    "tags": ["locomotion", "run", "loop", "root_motion"]
  }
}
