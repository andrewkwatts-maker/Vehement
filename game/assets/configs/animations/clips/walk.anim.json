{
  "$schema": "../../schemas/animation_clip.schema.json",
  "id": "anim_walk",
  "name": "Walk",
  "description": "Standard walking animation with footstep events",
  "version": "1.0",
  "duration": 1.0,
  "frameRate": 30,
  "looping": true,
  "playbackSpeed": 1.0,
  "skeleton": "humanoid_standard",

  "bones": {
    "Root": {
      "enabled": true,
      "interpolation": "linear",
      "keyframes": [
        { "time": 0.0, "position": [0, 0, 0], "rotation": [0, 0, 0, 1] },
        { "time": 0.25, "position": [0, 0.02, 0.25], "rotation": [0, 0, 0, 1] },
        { "time": 0.5, "position": [0, 0, 0.5], "rotation": [0, 0, 0, 1] },
        { "time": 0.75, "position": [0, 0.02, 0.75], "rotation": [0, 0, 0, 1] },
        { "time": 1.0, "position": [0, 0, 1.0], "rotation": [0, 0, 0, 1] }
      ]
    },
    "Spine": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.02, 0, -0.02, 0.9996] },
        { "time": 0.25, "rotation": [0.02, 0, 0.02, 0.9996] },
        { "time": 0.5, "rotation": [0.02, 0, -0.02, 0.9996] },
        { "time": 0.75, "rotation": [0.02, 0, 0.02, 0.9996] },
        { "time": 1.0, "rotation": [0.02, 0, -0.02, 0.9996] }
      ]
    },
    "LeftUpLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.3, 0, 0, 0.9539] },
        { "time": 0.25, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.5, "rotation": [0.3, 0, 0, 0.9539] },
        { "time": 0.75, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 1.0, "rotation": [-0.3, 0, 0, 0.9539] }
      ]
    },
    "LeftLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.4, 0, 0, 0.9165] },
        { "time": 0.25, "rotation": [0.1, 0, 0, 0.995] },
        { "time": 0.5, "rotation": [0.0, 0, 0, 1] },
        { "time": 0.75, "rotation": [0.3, 0, 0, 0.9539] },
        { "time": 1.0, "rotation": [0.4, 0, 0, 0.9165] }
      ]
    },
    "LeftFoot": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.15, 0, 0, 0.9887] },
        { "time": 0.25, "rotation": [0.1, 0, 0, 0.995] },
        { "time": 0.5, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.75, "rotation": [0.0, 0, 0, 1] },
        { "time": 1.0, "rotation": [-0.15, 0, 0, 0.9887] }
      ]
    },
    "RightUpLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.3, 0, 0, 0.9539] },
        { "time": 0.25, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.5, "rotation": [-0.3, 0, 0, 0.9539] },
        { "time": 0.75, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 1.0, "rotation": [0.3, 0, 0, 0.9539] }
      ]
    },
    "RightLeg": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.0, 0, 0, 1] },
        { "time": 0.25, "rotation": [0.3, 0, 0, 0.9539] },
        { "time": 0.5, "rotation": [0.4, 0, 0, 0.9165] },
        { "time": 0.75, "rotation": [0.1, 0, 0, 0.995] },
        { "time": 1.0, "rotation": [0.0, 0, 0, 1] }
      ]
    },
    "RightFoot": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.15, 0, 0, 0.9887] },
        { "time": 0.25, "rotation": [0.0, 0, 0, 1] },
        { "time": 0.5, "rotation": [-0.15, 0, 0, 0.9887] },
        { "time": 0.75, "rotation": [0.1, 0, 0, 0.995] },
        { "time": 1.0, "rotation": [0.15, 0, 0, 0.9887] }
      ]
    },
    "LeftArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.15, 0, 0.1, 0.9825] },
        { "time": 0.5, "rotation": [-0.15, 0, 0.1, 0.9825] },
        { "time": 1.0, "rotation": [0.15, 0, 0.1, 0.9825] }
      ]
    },
    "RightArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [-0.15, 0, -0.1, 0.9825] },
        { "time": 0.5, "rotation": [0.15, 0, -0.1, 0.9825] },
        { "time": 1.0, "rotation": [-0.15, 0, -0.1, 0.9825] }
      ]
    }
  },

  "events": [
    { "name": "FootstepLeft", "time": 0.0, "function": "PlayFootstep", "parameter": "left", "floatParameter": 0.5 },
    { "name": "FootstepRight", "time": 0.5, "function": "PlayFootstep", "parameter": "right", "floatParameter": 0.5 }
  ],

  "rootMotion": {
    "enabled": true,
    "extractPosition": { "x": false, "y": false, "z": true },
    "extractRotation": { "x": false, "y": true, "z": false },
    "rootBone": "Root",
    "lockY": true
  },

  "blending": {
    "blendInTime": 0.2,
    "blendOutTime": 0.2,
    "blendMode": "override"
  },

  "metadata": {
    "author": "Animation Team",
    "tags": ["locomotion", "walk", "loop", "root_motion"]
  }
}
