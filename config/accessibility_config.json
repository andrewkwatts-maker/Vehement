{
  "accessibility": {
    "version": "1.0",
    "description": "Nova3D Accessibility Configuration",

    "visual": {
      "high_contrast": {
        "enabled": false,
        "theme": "dark",
        "themes": {
          "dark": {
            "background": "#000000",
            "foreground": "#FFFFFF",
            "accent": "#FFFF00",
            "interactive": "#00FFFF"
          },
          "light": {
            "background": "#FFFFFF",
            "foreground": "#000000",
            "accent": "#0000FF",
            "interactive": "#0000FF"
          },
          "yellow_black": {
            "background": "#000000",
            "foreground": "#FFFF00",
            "accent": "#FFFFFF",
            "interactive": "#00FF00"
          }
        }
      },
      "colorblind": {
        "enabled": false,
        "mode": "none",
        "modes": ["none", "protanopia", "deuteranopia", "tritanopia", "achromatopsia"],
        "severity": 1.0,
        "use_patterns": false,
        "use_shapes": true
      },
      "text_scaling": {
        "enabled": true,
        "scale": 1.0,
        "min_scale": 0.75,
        "max_scale": 2.0,
        "step": 0.25
      },
      "ui_scaling": {
        "enabled": true,
        "scale": 1.0,
        "min_scale": 0.75,
        "max_scale": 2.0
      },
      "reduce_motion": {
        "enabled": false,
        "disable_camera_shake": false,
        "disable_screen_effects": false,
        "reduce_particle_effects": false
      },
      "flashing": {
        "reduce_flashing": false,
        "max_flash_frequency": 3.0,
        "flash_warning_enabled": true
      }
    },

    "audio": {
      "screen_reader": {
        "enabled": false,
        "rate": 1.0,
        "pitch": 1.0,
        "volume": 1.0,
        "announce_ui_changes": true,
        "announce_game_events": true,
        "announce_combat": true
      },
      "captions": {
        "enabled": true,
        "type": "subtitles",
        "types": ["subtitles", "closed_captions", "full"],
        "show_speaker_names": true,
        "show_sound_effects": false,
        "background_enabled": true,
        "background_opacity": 0.7,
        "text_size": 1.0,
        "text_color": "#FFFFFF",
        "speaker_color": "#FFFF00",
        "max_lines": 3,
        "position": "bottom"
      },
      "mono_audio": {
        "enabled": false
      },
      "visual_sound_indicators": {
        "enabled": false,
        "show_direction": true,
        "show_type": true,
        "show_distance": false
      }
    },

    "motor": {
      "aim_assist": {
        "enabled": false,
        "strength": 0.5,
        "snap_radius": 30,
        "slowdown_factor": 0.5,
        "auto_lock": false
      },
      "hold_to_toggle": {
        "enabled": false,
        "actions": ["sprint", "aim", "crouch"]
      },
      "sticky_keys": {
        "enabled": false,
        "activation_count": 5,
        "timeout_ms": 1000
      },
      "input_timing": {
        "double_tap_time": 0.3,
        "hold_time": 0.5,
        "repeat_delay": 0.5,
        "repeat_rate": 0.1
      },
      "one_handed_mode": {
        "enabled": false,
        "hand": "right"
      },
      "auto_actions": {
        "auto_pickup": false,
        "auto_reload": false,
        "auto_climb": false
      }
    },

    "cognitive": {
      "tutorials": {
        "extended_tutorials": false,
        "repeat_hints": true,
        "hint_frequency": 60
      },
      "navigation": {
        "waypoint_assistance": false,
        "objective_reminders": true,
        "reminder_frequency": 120
      },
      "difficulty": {
        "allow_skip_puzzles": false,
        "extended_timers": false,
        "timer_multiplier": 2.0,
        "simplified_mechanics": false
      },
      "reading": {
        "dyslexia_font": false,
        "increased_spacing": false,
        "pause_on_text": false,
        "text_to_speech": false
      }
    },

    "presets": {
      "vision_impaired": {
        "high_contrast_enabled": true,
        "text_scale": 1.5,
        "screen_reader_enabled": true,
        "captions_enabled": true
      },
      "color_blind": {
        "colorblind_enabled": true,
        "colorblind_mode": "deuteranopia",
        "use_shapes": true,
        "use_patterns": true
      },
      "hearing_impaired": {
        "captions_enabled": true,
        "captions_type": "full",
        "show_sound_effects": true,
        "visual_sound_indicators": true
      },
      "motor_impaired": {
        "aim_assist_enabled": true,
        "hold_to_toggle_enabled": true,
        "extended_timers": true,
        "auto_actions_enabled": true
      }
    },

    "debug": {
      "log_accessibility_events": false,
      "show_accessibility_overlay": false
    }
  }
}
