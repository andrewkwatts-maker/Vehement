    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": {
                "animation": "idle",
                "transitions": [
                    { "to": "walk", "condition": "isMoving" },
                    { "to": "attack", "condition": "isAttacking" },
                    { "to": "ability_blizzard", "condition": "isCastingQ" },
                    { "to": "ability_brilliance_aura", "condition": "isCastingW" },
                    { "to": "ability_water_elemental", "condition": "isCastingE" },
                    { "to": "ability_mass_teleport", "condition": "isCastingR" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "walk": {
                "animation": "walk",
                "transitions": [
                    { "to": "idle", "condition": "!isMoving" },
                    { "to": "attack", "condition": "isAttacking" },
                    { "to": "ability_blizzard", "condition": "isCastingQ" },
                    { "to": "ability_brilliance_aura", "condition": "isCastingW" },
                    { "to": "ability_water_elemental", "condition": "isCastingE" },
                    { "to": "ability_mass_teleport", "condition": "isCastingR" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "attack": {
                "animation": "attack",
                "transitions": [
                    { "to": "idle", "condition": "animationComplete && !isMoving" },
                    { "to": "walk", "condition": "animationComplete && isMoving" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "ability_blizzard": {
                "animation": "ability_blizzard",
                "transitions": [
                    { "to": "idle", "condition": "animationComplete && !isMoving" },
                    { "to": "walk", "condition": "animationComplete && isMoving" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "ability_brilliance_aura": {
                "animation": "ability_brilliance_aura",
                "transitions": [
                    { "to": "idle", "condition": "animationComplete && !isMoving" },
                    { "to": "walk", "condition": "animationComplete && isMoving" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "ability_water_elemental": {
                "animation": "ability_water_elemental",
                "transitions": [
                    { "to": "idle", "condition": "animationComplete && !isMoving" },
                    { "to": "walk", "condition": "animationComplete && isMoving" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "ability_mass_teleport": {
                "animation": "ability_mass_teleport",
                "transitions": [
                    { "to": "idle", "condition": "animationComplete && !isMoving" },
                    { "to": "walk", "condition": "animationComplete && isMoving" },
                    { "to": "death", "condition": "isDead" }
                ]
            },
            "death": {
                "animation": "death",
                "transitions": []
            }
        }
    },

