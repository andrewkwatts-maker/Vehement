    "skeleton": {
        "bones": [
            { "name": "root", "parent": null, "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "banner", "parent": "root", "position": [0.4, 4.8, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] }
        ]
    },

    "animations": {
        "idle": {
            "duration": 4.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "banner": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 2.0, "bones": { "banner": { "rotation": [0.0, 0.05, 0.0, 0.9997] } } },
                { "time": 4.0, "bones": { "banner": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "construction": {
            "duration": 150.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "constructionProgress": 0.0 },
                { "time": 150.0, "constructionProgress": 1.0 }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "construction",
        "states": {
            "construction": { "animation": "construction", "transitions": [{ "to": "idle", "condition": "constructionComplete" }] },
            "idle": { "animation": "idle", "transitions": [] }
        }
    },

    "trains": ["peasant"],
    "upgrades": ["keep"],

    "abilities": [
        { "id": "train_peasant", "name": "Train Peasant", "description": "Trains a Peasant worker.", "cost": { "gold": 75, "food": 1 }, "buildTime": 15.0 },
        { "id": "upgrade_keep", "name": "Upgrade to Keep", "description": "Upgrades Town Hall to Keep.", "cost": { "gold": 320, "lumber": 200 }, "buildTime": 120.0, "requiresTier": 1 },
        { "id": "call_to_arms", "name": "Call to Arms", "description": "Converts Peasants to Militia temporarily.", "cooldown": 300.0, "duration": 45.0 }
    ],

    "behaviors": {
        "on_construct_start": { "actions": [{ "type": "play_sound", "sound": "building_construct_start" }] },
        "on_construct_complete": { "actions": [{ "type": "play_sound", "sound": "building_complete" }, { "type": "spawn_effect", "effect": "construction_complete_flash" }] },
        "on_train_complete": { "actions": [{ "type": "play_sound", "sound": "unit_ready" }] },
        "on_destroyed": { "actions": [{ "type": "spawn_effect", "effect": "building_collapse" }, { "type": "play_sound", "sound": "building_destroyed" }] }
    },

    "effects": {
        "construction_complete_flash": { "type": "flash", "color": [1.0, 1.0, 0.8, 0.6], "duration": 0.5 },
        "building_collapse": { "type": "debris", "particles": { "type": "stone_chunks", "count": 50, "color": [0.6, 0.55, 0.5, 1.0] } }
    }
