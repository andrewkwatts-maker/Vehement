    "animations": {
        "idle": {
            "duration": 2.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.0, "bones": { "root": { "position": [0.0, 0.05, 0.0] }, "body": { "rotation": [0.02, 0.0, 0.0, 0.9998] } } },
                { "time": 2.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "fly": {
            "duration": 0.8, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.05, 0.0, 0.0, 0.999] }, "wing_l": { "rotation": [0.0, 0.0, -0.05, 0.999] }, "wing_r": { "rotation": [0.0, 0.0, 0.05, 0.999] } } },
                { "time": 0.4, "bones": { "body": { "rotation": [-0.03, 0.0, 0.0, 0.9995] }, "wing_l": { "rotation": [0.0, 0.0, 0.03, 0.9995] }, "wing_r": { "rotation": [0.0, 0.0, -0.03, 0.9995] } } },
                { "time": 0.8, "bones": { "body": { "rotation": [0.05, 0.0, 0.0, 0.999] }, "wing_l": { "rotation": [0.0, 0.0, -0.05, 0.999] }, "wing_r": { "rotation": [0.0, 0.0, 0.05, 0.999] } } }
            ]
        },
        "attack": {
            "duration": 0.6, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.2, "bones": { "body": { "rotation": [-0.05, 0.0, 0.0, 0.999] } } },
                { "time": 0.3, "bones": { "body": { "rotation": [0.03, 0.0, 0.0, 0.9995] } }, "events": ["fire_ion_cannon"] },
                { "time": 0.6, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "graviton_beam": {
            "duration": 7.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.5, "bones": { "body": { "rotation": [0.1, 0.0, 0.0, 0.995] } }, "events": ["graviton_start"] },
                { "time": 6.5, "bones": { "body": { "rotation": [0.1, 0.0, 0.0, 0.995] } } },
                { "time": 7.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "death": {
            "duration": 1.5, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.5, "bones": { "root": { "position": [0.0, -0.2, 0.0], "rotation": [0.2, 0.0, 0.3, 0.93] } }, "events": ["smoke_trail"] },
                { "time": 1.5, "bones": { "root": { "position": [0.0, -2.0, 0.5], "rotation": [0.5, 0.3, 0.4, 0.7] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "graviton_beam", "condition": "isUsingGraviton" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "graviton_beam", "condition": "isUsingGraviton" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "graviton_beam": { "animation": "graviton_beam", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "graviton_beam", "name": "Graviton Beam", "description": "Lifts target ground unit into the air for 7 seconds.", "hotkey": "G", "energyCost": 50, "duration": 7.0 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "phoenix_online" }, { "type": "spawn_effect", "effect": "warp_in_air", "duration": 1.0 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "ion_cannon_fire" }, { "type": "spawn_projectile", "projectile": "ion_bolt" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "phoenix_death" }, { "type": "spawn_effect", "effect": "air_explosion" }] }
    },

    "effects": {
        "warp_in_air": { "type": "flash", "color": [0.3, 0.7, 1.0, 0.8], "duration": 1.0 },
        "graviton_effect": { "type": "beam", "color": [0.3, 0.6, 1.0, 0.7], "width": 0.5 },
        "air_explosion": { "type": "explosion", "radius": 1.5, "color": [0.4, 0.7, 1.0, 0.7], "particles": { "type": "debris", "count": 40, "color": [0.5, 0.55, 0.6, 1.0] } }
    }
