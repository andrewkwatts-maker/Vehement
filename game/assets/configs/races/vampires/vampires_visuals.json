    "capeFlutterEffect": true,
    "shadowTrail": true
  },

  "abilityEffects": {
    "lifeSteal": {
      "effect": "effects/life_drain.vfx",
      "color": "#C41E3A",
      "sound": "audio/sfx/life_drain.ogg"
    },
    "transformation": {
      "batForm": {
        "effect": "effects/bat_transform.vfx",
        "sound": "audio/sfx/bat_transform.ogg",
        "particles": "effects/bat_particles.vfx"
      },
      "wolfForm": {
        "effect": "effects/wolf_transform.vfx",
        "sound": "audio/sfx/wolf_transform.ogg"
      },
      "mistForm": {
        "effect": "effects/mist_form.vfx",
        "sound": "audio/sfx/mist_form.ogg",
        "particles": "effects/mist_particles.vfx"
      }
    },
    "bloodMagic": {
      "bloodBolt": {
        "projectile": "effects/blood_bolt.vfx",
        "impact": "effects/blood_bolt_impact.vfx",
        "sound": "audio/sfx/blood_bolt.ogg"
      },
      "bloodStorm": {
        "effect": "effects/blood_storm.vfx",
        "sound": "audio/sfx/blood_storm.ogg"
      },
      "sanguineNova": {
        "effect": "effects/sanguine_nova.vfx",
        "sound": "audio/sfx/sanguine_nova.ogg"
      }
    },
    "domination": {
      "cast": "effects/dominate_cast.vfx",
      "target": "effects/dominate_target.vfx",
      "link": "effects/dominate_link.vfx",
      "sound": "audio/sfx/dominate.ogg"
    },
    "shadowMagic": {
      "shadowStep": {
        "disappear": "effects/shadow_step_out.vfx",
        "appear": "effects/shadow_step_in.vfx",
        "sound": "audio/sfx/shadow_step.ogg"
      },
      "stealth": {
        "effect": "effects/stealth_activate.vfx",
        "shader": "shaders/stealth_shimmer.shader"
      }
    }
  },

  "environmentEffects": {
    "nightAmbient": {
      "fogColor": "#1a0000",
      "fogDensity": 0.02,
      "lightingTint": "#4A0000",
      "moonGlow": true
    },
    "bloodPools": {
      "texture": "textures/terrain/blood_pool.png",
      "animated": true,
      "reflective": true
    },
    "crimsonNightZone": {
      "effect": "effects/crimson_night_zone.vfx",
      "skyboxTint": "#4A0000",
      "particleEffect": "effects/blood_rain.vfx"
    }
  },

  "terrainDecals": {
    "baseDecal": "textures/terrain/vampire_base.png",
    "bloodSplatter": "textures/terrain/blood_splatter.png",
    "corpseDecay": "textures/terrain/corpse_stain.png"
  },

  "dayNightVisuals": {
    "dayMode": {
      "unitAlpha": 0.8,
      "particleReduction": 0.5,
      "shadowIntensity": 1.5,
      "sunDamageEffect": "effects/sun_damage.vfx"
    },
    "nightMode": {
      "unitGlow": true,
      "glowIntensity": 0.3,
      "particleBoost": 1.5,
      "eyeGlowIntensity": 1.0
    },
    "twilightTransition": {
      "duration": 30.0,
      "colorShift": true
    }
  },

  "heroVisuals": {
    "vampire_count": {
      "auraEffect": "effects/count_aura.vfx",
      "weaponTrail": "effects/crimson_weapon_trail.vfx",
      "capeAnimation": "elaborate",
      "crownGlow": true
    },
    "blood_queen": {
      "auraEffect": "effects/queen_aura.vfx",
      "particleEffect": "effects/blood_motes.vfx",
      "dressAnimation": "flowing",
      "charmEffect": "effects/charm_hearts.vfx"
    },
    "shadow_lord": {
      "auraEffect": "effects/shadow_aura.vfx",
      "stealthShader": "shaders/shadow_cloak.shader",
      "weaponGlow": "#4A0000"
    },
    "nosferatu_elder": {
      "auraEffect": "effects/terror_aura.vfx",
      "bodyDistortion": true,
      "clawTrails": "effects/claw_trails.vfx"
    }
