    }
  ],
  "conditions": [
    {
      "id": "and",
      "category": "boolean",
      "name": "And",
      "description": "All conditions must be true",
      "parameters": [],
      "hasChildren": true
    },
    {
      "id": "or",
      "category": "boolean",
      "name": "Or",
      "description": "At least one condition must be true",
      "parameters": [],
      "hasChildren": true
    },
    {
      "id": "not",
      "category": "boolean",
      "name": "Not",
      "description": "Negates a condition",
      "parameters": [],
      "hasChildren": true,
      "maxChildren": 1
    },
    {
      "id": "comparison",
      "category": "comparison",
      "name": "Compare Values",
      "description": "Compare two values",
      "parameters": [
        {
          "name": "leftValue",
          "type": "any",
          "description": "Left side value"
        },
        {
          "name": "operator",
          "type": "string",
          "enum": ["==", "!=", "<", "<=", ">", ">="],
          "default": "=="
        },
        {
          "name": "rightValue",
          "type": "any",
          "description": "Right side value"
        }
      ]
    },
    {
      "id": "variable_comparison",
      "category": "comparison",
      "name": "Compare Variable",
      "description": "Compare a variable to a value",
      "parameters": [
        {
          "name": "variable",
          "type": "variable",
          "description": "Variable to check"
        },
        {
          "name": "operator",
          "type": "string",
          "enum": ["==", "!=", "<", "<=", ">", ">="],
          "default": "=="
        },
        {
          "name": "value",
          "type": "any",
          "description": "Value to compare against"
        }
      ]
    },
