<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Information -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>Vehement 2</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Required Device Capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arm64</string>
        <string>metal</string>
        <string>gps</string>
    </array>

    <!-- Launch Screen -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Supported Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Status Bar -->
    <key>UIStatusBarHidden</key>
    <true/>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>

    <!-- Full Screen -->
    <key>UIRequiresFullScreen</key>
    <true/>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
    </array>

    <!-- Location Usage Descriptions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Vehement 2 uses your location to place zombies and resources in the real world around you.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Vehement 2 uses your location in the background to track zombie movements and defend your base even when you're not playing.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>Vehement 2 uses your location in the background to track zombie movements and defend your base even when you're not playing.</string>

    <!-- Camera Usage (for potential AR features) -->
    <key>NSCameraUsageDescription</key>
    <string>Vehement 2 can use your camera for AR features and scanning real-world objects.</string>

    <!-- Motion Usage (for device orientation) -->
    <key>NSMotionUsageDescription</key>
    <string>Vehement 2 uses motion data to enhance the gaming experience with device orientation controls.</string>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>firebase.google.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSIncludesSubdomains</key>
                <true/>
            </dict>
        </dict>
    </dict>

    <!-- Game Center -->
    <key>UIFileSharingEnabled</key>
    <false/>

    <!-- Scene Configuration (iOS 13+) -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict/>
    </dict>

    <!-- Metal Rendering -->
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>

    <!-- Supports High Refresh Rate Displays -->
    <key>UIPreferredDisplayMode</key>
    <string>highFrameRate</string>

    <!-- Icon and Assets -->
    <key>CFBundleIcons</key>
    <dict/>
    <key>CFBundleIcons~ipad</key>
    <dict/>

    <!-- Minimum OS Version -->
    <key>MinimumOSVersion</key>
    <string>14.0</string>

    <!-- Allow network connections -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>Vehement 2 uses local network for multiplayer features.</string>
</dict>
</plist>
