    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "cast", "condition": "isCasting" }, { "to": "phase", "condition": "isPhasing" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "cast", "condition": "isCasting" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "cast": { "animation": "cast", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "phase": { "animation": "phase", "transitions": [{ "to": "idle", "condition": "animationComplete" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "mana_burn", "name": "Mana Burn", "description": "Burns enemy mana and deals damage equal to the mana burned.", "hotkey": "B" },
        { "id": "phase_shift", "name": "Phase Shift", "description": "Automatically phases out when not attacking, becoming invulnerable.", "passive": true }
    ],

    "behaviors": {
