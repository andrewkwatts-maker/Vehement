    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "crawl", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "burrow_in", "condition": "isBurrowing" }, { "to": "death", "condition": "isDead" }] },
            "crawl": { "animation": "crawl", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "crawl", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "burrow_in": { "animation": "burrow_in", "transitions": [{ "to": "burrowed", "condition": "animationComplete" }] },
            "burrowed": { "animation": "idle", "transitions": [{ "to": "burrow_out", "condition": "!isBurrowing" }] },
            "burrow_out": { "animation": "burrow_out", "transitions": [{ "to": "idle", "condition": "animationComplete" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "wall_climb", "name": "Wall Climb", "description": "Can move over cliffs and scale vertical surfaces.", "hotkey": "W", "isPassive": true },
        { "id": "burrow", "name": "Burrow", "description": "Burrows underground, becoming invisible and regenerating health.", "hotkey": "B", "cooldown": 15.0, "manaCost": 25 },
        { "id": "ambush_strike", "name": "Ambush Strike", "description": "First attack from burrow deals double damage and stuns.", "hotkey": "A", "isPassive": true },
        { "id": "echolocation", "name": "Echolocation", "description": "Reveals all units in a large area, including invisible ones.", "hotkey": "E", "cooldown": 45.0, "manaCost": 50 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "crawler_ready" }, { "type": "random_say", "texts": ["*hissing*", "*clicking sounds*", "*scraping claws*"], "chance": 1.0 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "crawler_attack" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "crawler_death" }] }
    }
}
