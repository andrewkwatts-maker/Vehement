    "highlightColor": "#FF0000",
    "buttonNormal": "#3F0000",
    "buttonHover": "#5F0000",
    "buttonPressed": "#8B0000",
    "progressBarFill": "#C41E3A",
    "progressBarBackground": "#2F0000",
    "tooltipBackground": "#1a0000",
    "tooltipBorder": "#8B0000",
    "font": "fonts/gothic_vampire.ttf",
    "iconStyle": "ornate_gothic"
  },

  "banners": {
