{
    "settings_version": 1,
    "window": {
        "width": 1920,
        "height": 1080,
        "title": "Nova3D Engine Demo",
        "fullscreen": false,
        "vsync": true,
        "resizable": true,
        "samples": 4
    },
    "camera": {
        "fov": 45.0,
        "near_plane": 0.1,
        "far_plane": 1000.0,
        "move_speed": 10.0,
        "rotation_speed": 2.0,
        "look_speed": 0.1,
        "default_position": [10.0, 10.0, 10.0],
        "default_target": [0.0, 0.0, 0.0],
        "sensitivity": 1.0,
        "invert_y": false,
        "edge_scrolling": true,
        "edge_scrolling_enabled": true,
        "edge_scroll_speed": 5.0,
        "edge_scroll_speed_multiplier": 1.0,
        "zoom_speed": 1.0,
        "zoom_min": 10.0,
        "zoom_max": 100.0
    },
    "render": {
        "clear_color": [0.1, 0.1, 0.15, 1.0],
        "enable_shadows": true,
        "shadow_map_size": 2048,
        "shadow_bias": 0.005,
        "enable_hdr": false,
        "enable_bloom": true,
        "enable_ssao": true,
        "gamma": 2.2,
        "scale": 1.0,
        "max_fps": 0
    },
    "audio": {
        "master_volume": 1.0,
        "music_volume": 0.7,
        "sfx_volume": 1.0,
        "ambient_volume": 0.5,
        "voice_volume": 1.0,
        "master_mute": false,
        "music_mute": false,
        "sfx_mute": false
    },
    "input": {
        "mouse_sensitivity": 1.0,
        "invert_y": false
    },
    "ui": {
        "show_minimap": true,
        "show_tooltips": true,
        "tooltip_delay": 0.5,
        "scale": 1.0
    },
    "debug": {
        "show_grid": true,
        "grid_size": 20,
        "grid_spacing": 1.0,
        "grid_color": [0.5, 0.5, 0.5, 1.0],
        "axis_x_color": [1.0, 0.0, 0.0, 1.0],
        "axis_y_color": [0.0, 1.0, 0.0, 1.0],
        "axis_z_color": [0.0, 0.0, 1.0, 1.0],
        "show_fps": true,
        "show_stats": true
    },
    "game": {
        "pause_on_focus_loss": true
    },
    "editor": {
        "auto_save_enabled": true,
        "auto_save_interval": 5
    },
    "particles": {
        "max_particles": 10000,
        "default_lifespan": 2.0,
        "default_size": 0.1
    },
    "terrain": {
        "chunk_size": 64,
        "view_distance": 4,
        "height_scale": 50.0,
        "noise_frequency": 0.02,
        "octaves": 6,
        "persistence": 0.5,
        "lacunarity": 2.0
    },
    "pathfinding": {
        "default_node_radius": 0.5,
        "max_iterations": 10000,
        "heuristic_weight": 1.0
    },
    "animation": {
        "default_fps": 30,
        "blend_time": 0.2
    }
}
