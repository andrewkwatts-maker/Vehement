        ]
    },

    "animations": {
        "idle": {
            "duration": 3.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "core_ring": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.5, "bones": { "root": { "position": [0.0, 0.05, 0.0] }, "core_ring": { "rotation": [0.0, 0.38, 0.0, 0.92] } } },
                { "time": 3.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "core_ring": { "rotation": [0.0, 0.71, 0.0, 0.71] } } }
            ]
        },
        "fly": {
            "duration": 1.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.03, 0.0, 0.0, 0.9995] }, "core_ring": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.5, "bones": { "body": { "rotation": [-0.03, 0.0, 0.0, 0.9995] }, "core_ring": { "rotation": [0.0, 0.71, 0.0, 0.71] } } },
                { "time": 1.0, "bones": { "body": { "rotation": [0.03, 0.0, 0.0, 0.9995] }, "core_ring": { "rotation": [0.0, 1.0, 0.0, 0.0] } } }
            ]
        },
        "attack_charging": {
            "duration": 4.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.3, "bones": { "body": { "rotation": [-0.03, 0.0, 0.0, 0.9995] } }, "events": ["beam_level_1"] },
                { "time": 2.6, "bones": { "body": { "rotation": [-0.05, 0.0, 0.0, 0.999] } }, "events": ["beam_level_2"] },
                { "time": 4.0, "bones": { "body": { "rotation": [-0.08, 0.0, 0.0, 0.997] } }, "events": ["beam_level_3"] }
            ]
        },
        "prismatic_alignment": {
            "duration": 1.5, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.5, "bones": { "body": { "rotation": [-0.1, 0.0, 0.0, 0.995] } }, "events": ["prismatic_activate"] },
                { "time": 1.5, "bones": { "body": { "rotation": [-0.08, 0.0, 0.0, 0.997] } } }
            ]
        },
        "death": {
            "duration": 2.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.6, "bones": { "root": { "position": [0.0, -0.3, 0.0], "rotation": [0.2, 0.1, 0.3, 0.92] } }, "events": ["explosion_core"] },
                { "time": 2.0, "bones": { "root": { "position": [0.0, -3.0, 0.5], "rotation": [0.5, 0.3, 0.5, 0.64] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "attack_charging", "condition": "isAttacking" }, { "to": "prismatic_alignment", "condition": "isPrismaticActive" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack_charging", "condition": "isAttacking" }, { "to": "prismatic_alignment", "condition": "isPrismaticActive" }, { "to": "death", "condition": "isDead" }] },
            "attack_charging": { "animation": "attack_charging", "transitions": [{ "to": "idle", "condition": "!isAttacking && !isMoving" }, { "to": "fly", "condition": "!isAttacking && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "prismatic_alignment": { "animation": "prismatic_alignment", "transitions": [{ "to": "attack_charging", "condition": "animationComplete && isAttacking" }, { "to": "idle", "condition": "animationComplete && !isAttacking" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "prismatic_alignment", "name": "Prismatic Alignment", "description": "Instantly activates maximum beam charge for 14.3 seconds.", "hotkey": "A", "cooldown": 60.0 }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "void_ray_online" }, { "type": "spawn_effect", "effect": "warp_in_air", "duration": 1.5 }] },
        "on_attack": { "actions": [{ "type": "play_sound", "sound": "void_beam" }, { "type": "spawn_effect", "effect": "void_beam" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "void_ray_death" }, { "type": "spawn_effect", "effect": "prismatic_explosion" }] }
    },

    "effects": {
        "warp_in_air": { "type": "flash", "color": [0.5, 0.3, 1.0, 0.8], "duration": 1.5 },
        "void_beam": { "type": "beam", "color": [0.5, 0.3, 1.0, 0.9], "width": 0.15, "charging": true },
        "prismatic_explosion": { "type": "explosion", "radius": 2.5, "color": [0.5, 0.4, 1.0, 0.8], "particles": { "type": "prismatic_shards", "count": 50, "color": [0.6, 0.4, 1.0, 1.0] } }
    }
