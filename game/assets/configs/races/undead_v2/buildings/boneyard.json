{
  "$schema": "../../../../schemas/building_archetype.schema.json",
  "id": "undead_boneyard",
  "name": "Boneyard",
  "description": "Workshop of flesh and bone where massive siege units are constructed. Trains abominations and bone horrors.",
  "race": "undead",
  "category": "military",
  "tier": 2,

  "size": {
    "width": 5,
    "height": 4
  },

  "health": 1400,
  "armor": 6,
  "magicResist": 15,

  "cost": {
    "gold": 350,
    "wood": 200,
    "stone": 150
  },

  "buildTime": 85,
  "requiredBuilding": "undead_graveyard",
  "requiredAge": 2,

  "providesPopulation": 0,

  "productionQueue": [
    {
      "type": "unit",
      "id": "undead_abomination",
      "requiredAge": 2
    },
    {
      "type": "unit",
      "id": "undead_bone_horror",
      "requiredAge": 2
    }
  ],

  "resourceGeneration": {
    "corpseStorage": 25,
    "requiresWorker": false
  },

  "garrisonCapacity": 0,

  "attackCapability": {
    "canAttack": false
  },

  "abilities": [
    {
      "id": "bone_forge",
