{
  "localization": {
    "version": "1.0",
    "description": "Nova3D Localization System Configuration",

    "default_language": "en",
    "fallback_language": "en",
    "auto_detect": true,

    "languages": {
      "en": {
        "name": "English",
        "native_name": "English",
        "code": "en",
        "region": "US",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      },
      "es": {
        "name": "Spanish",
        "native_name": "Espanol",
        "code": "es",
        "region": "ES",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      },
      "fr": {
        "name": "French",
        "native_name": "Francais",
        "code": "fr",
        "region": "FR",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      },
      "de": {
        "name": "German",
        "native_name": "Deutsch",
        "code": "de",
        "region": "DE",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      },
      "it": {
        "name": "Italian",
        "native_name": "Italiano",
        "code": "it",
        "region": "IT",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      },
      "pt": {
        "name": "Portuguese",
        "native_name": "Portugues",
        "code": "pt",
        "region": "BR",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      },
      "ru": {
        "name": "Russian",
        "native_name": "Russkiy",
        "code": "ru",
        "region": "RU",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSansCyrillic", "Arial"]
      },
      "ja": {
        "name": "Japanese",
        "native_name": "Nihongo",
        "code": "ja",
        "region": "JP",
        "rtl": false,
        "font_fallback": ["NotoSansJP", "YuGothic", "MS Gothic"]
      },
      "ko": {
        "name": "Korean",
        "native_name": "Hangugeo",
        "code": "ko",
        "region": "KR",
        "rtl": false,
        "font_fallback": ["NotoSansKR", "Malgun Gothic", "Dotum"]
      },
      "zh_CN": {
        "name": "Chinese (Simplified)",
        "native_name": "Zhongwen",
        "code": "zh",
        "region": "CN",
        "rtl": false,
        "font_fallback": ["NotoSansSC", "SimHei", "Microsoft YaHei"]
      },
      "zh_TW": {
        "name": "Chinese (Traditional)",
        "native_name": "Zhongwen",
        "code": "zh",
        "region": "TW",
        "rtl": false,
        "font_fallback": ["NotoSansTC", "PMingLiU", "Microsoft JhengHei"]
      },
      "ar": {
        "name": "Arabic",
        "native_name": "Al-Arabiyya",
        "code": "ar",
        "region": "SA",
        "rtl": true,
        "font_fallback": ["NotoSansArabic", "Tahoma", "Arial"]
      },
      "pl": {
        "name": "Polish",
        "native_name": "Polski",
        "code": "pl",
        "region": "PL",
        "rtl": false,
        "font_fallback": ["Roboto", "NotoSans", "Arial"]
      }
    },

    "formatting": {
      "date_format": {
        "en": "MM/DD/YYYY",
        "de": "DD.MM.YYYY",
        "ja": "YYYY/MM/DD",
        "default": "YYYY-MM-DD"
      },
      "time_format": {
        "en": "h:mm A",
        "de": "HH:mm",
        "ja": "HH:mm",
        "default": "HH:mm:ss"
      },
      "number_format": {
        "en": { "decimal": ".", "thousands": "," },
        "de": { "decimal": ",", "thousands": "." },
        "fr": { "decimal": ",", "thousands": " " },
        "default": { "decimal": ".", "thousands": "," }
      },
      "currency_format": {
        "en": { "symbol": "$", "position": "before", "spacing": false },
        "de": { "symbol": "EUR", "position": "after", "spacing": true },
        "ja": { "symbol": "Y", "position": "before", "spacing": false },
        "default": { "symbol": "$", "position": "before", "spacing": false }
      }
    },

    "string_tables_path": "assets/localization/",
    "string_tables": [
      "common.csv",
      "ui.csv",
      "gameplay.csv",
      "items.csv",
      "dialogue.csv",
      "tutorials.csv"
    ],

    "text_rendering": {
      "default_font_size": 16,
      "min_font_size": 8,
      "max_font_size": 72,
      "line_height_multiplier": 1.2,
      "kerning_enabled": true,
      "subpixel_rendering": true
    },

    "debug": {
      "show_string_ids": false,
      "highlight_missing": true,
      "missing_string_color": "#FF00FF",
      "log_missing_strings": true
    }
  }
}
