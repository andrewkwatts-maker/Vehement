            { "name": "root", "parent": null, "position": [0.0, 0.4, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "core", "parent": "root", "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "sparkle_orbit", "parent": "core", "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
