    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "run", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "pounce", "condition": "isPouncing" }, { "to": "death", "condition": "isDead" }] },
            "run": { "animation": "run", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "pounce", "condition": "isPouncing" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "run", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "pounce": { "animation": "pounce", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
