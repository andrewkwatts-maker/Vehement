{
  "replay": {
    "version": "1.0",
    "description": "Nova3D Replay System Configuration",

    "recording": {
      "enabled": true,
      "auto_record": false,
      "max_duration_minutes": 30,
      "buffer_size_mb": 64,
      "circular_buffer": true
    },

    "input_capture": {
      "keyboard": true,
      "mouse": true,
      "gamepad": true,
      "capture_rate_hz": 60,
      "interpolation": true
    },

    "state_snapshots": {
      "enabled": true,
      "interval_seconds": 5.0,
      "include_positions": true,
      "include_health": true,
      "include_inventory": true,
      "include_physics": true,
      "compression": true
    },

    "playback": {
      "default_speed": 1.0,
      "speed_options": [0.25, 0.5, 1.0, 2.0, 4.0, 8.0],
      "allow_seek": true,
      "seek_granularity_seconds": 0.5,
      "allow_pause": true,
      "allow_frame_advance": true,
      "show_timeline": true
    },

    "camera": {
      "modes": ["follow_player", "free_cam", "fixed", "cinematic"],
      "default_mode": "follow_player",
      "free_cam_speed": 10.0,
      "smooth_follow": true,
      "follow_smoothness": 5.0
    },

    "ui_overlay": {
      "show_timestamp": true,
      "show_speed": true,
      "show_controls": true,
      "show_player_info": false,
      "timeline_height": 40,
      "timeline_opacity": 0.8
    },

    "export": {
      "enabled": true,
      "format": "binary",
      "formats": ["binary", "json", "video"],
      "video_codec": "h264",
      "video_fps": 60,
      "video_quality": "high",
      "include_audio": true
    },

    "storage": {
      "directory": "replays/",
      "file_extension": ".replay",
      "max_replay_files": 50,
      "max_total_size_mb": 1000,
      "auto_cleanup": true,
      "cleanup_threshold_days": 30
    },

    "metadata": {
      "include_player_name": true,
      "include_map_name": true,
      "include_game_mode": true,
      "include_date": true,
      "include_duration": true,
      "include_thumbnail": true,
      "thumbnail_width": 320,
      "thumbnail_height": 180
    },

    "verification": {
      "checksum_enabled": true,
      "checksum_algorithm": "sha256",
      "verify_determinism": true,
      "tolerance_frames": 10
    },

    "debug": {
      "log_input_events": false,
      "log_state_snapshots": false,
      "show_desync_warnings": true,
      "visualize_inputs": false
    }
  }
}
