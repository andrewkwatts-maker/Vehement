    "behaviors": {
        "on_spawn": {
            "actions": [
                { "type": "play_sound", "sound": "hero_archmage_spawn" },
                { "type": "spawn_effect", "effect": "arcane_arrival", "duration": 2.0 },
                { "type": "say", "text": "Knowledge is power!" }
            ]
        },
        "on_attack": {
            "actions": [
                { "type": "spawn_projectile", "projectile": "arcane_bolt", "target": "attack_target" },
                { "type": "play_sound", "sound": "archmage_attack" }
            ]
        },
        "on_ability_q": {
            "conditions": [
                { "type": "has_mana", "amount": 75 },
                { "type": "cooldown_ready", "ability": "blizzard" }
            ],
            "actions": [
                { "type": "play_animation", "animation": "ability_blizzard" },
                { "type": "spawn_effect", "effect": "blizzard_storm", "target": "ability_target", "duration": 6.0 },
                { "type": "area_damage_over_time", "target": "ability_target", "radius": 300, "damagePerWave": 30, "waves": 6, "filter": "enemy" },
                { "type": "area_slow", "target": "ability_target", "radius": 300, "amount": 0.3, "duration": 2.0, "filter": "enemy" },
                { "type": "play_sound", "sound": "blizzard_cast" },
                { "type": "spend_mana", "amount": 75 },
                { "type": "start_cooldown", "ability": "blizzard" }
            ]
        },
        "on_ability_w": {
            "conditions": [
                { "type": "cooldown_ready", "ability": "brilliance_aura" }
            ],
            "actions": [
                { "type": "play_animation", "animation": "ability_brilliance_aura" },
                { "type": "toggle_aura", "aura": "brilliance_aura" },
                { "type": "spawn_effect", "effect": "brilliance_pulse", "target": "self" },
                { "type": "play_sound", "sound": "aura_toggle" }
            ]
        },
        "on_ability_e": {
            "conditions": [
                { "type": "has_mana", "amount": 125 },
                { "type": "cooldown_ready", "ability": "water_elemental" }
            ],
            "actions": [
                { "type": "play_animation", "animation": "ability_water_elemental" },
                { "type": "summon_unit", "unit": "water_elemental", "position": "front", "duration": 60.0 },
                { "type": "spawn_effect", "effect": "water_summon_splash", "position": "front" },
                { "type": "play_sound", "sound": "water_elemental_summon" },
                { "type": "spend_mana", "amount": 125 },
                { "type": "start_cooldown", "ability": "water_elemental" }
            ]
        },
        "on_ability_r": {
            "conditions": [
                { "type": "has_mana", "amount": 150 },
                { "type": "cooldown_ready", "ability": "mass_teleport" }
            ],
            "actions": [
                { "type": "play_animation", "animation": "ability_mass_teleport" },
                { "type": "spawn_effect", "effect": "teleport_portal", "target": "self", "duration": 2.0 },
                { "type": "teleport_group", "radius": 600, "destination": "ability_target", "maxUnits": 24 },
                { "type": "spawn_effect", "effect": "teleport_arrival", "target": "ability_target", "duration": 1.5 },
                { "type": "play_sound", "sound": "mass_teleport_cast" },
                { "type": "spend_mana", "amount": 150 },
                { "type": "start_cooldown", "ability": "mass_teleport" }
            ]
        },
        "on_kill": {
            "actions": [
                { "type": "gain_experience", "amount": "target.experience_value" },
                { "type": "random_say", "texts": ["Insignificant.", "Your magic was... lacking.", "Study harder next time."], "chance": 0.3 }
