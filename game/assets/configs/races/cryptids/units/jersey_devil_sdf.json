    "animationStateMachine": {
        "initialState": "hover",
        "states": {
            "hover": { "animation": "hover", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "dive", "condition": "isDiving" }, { "to": "scream", "condition": "isScreaming" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "hover", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "dive", "condition": "isDiving" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "hover", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "dive": { "animation": "dive", "transitions": [{ "to": "hover", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "scream": { "animation": "scream", "transitions": [{ "to": "hover", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "blood_curdling_scream", "name": "Blood-Curdling Scream", "description": "Releases a terrifying scream that causes nearby enemies to flee.", "hotkey": "S", "cooldown": 25.0, "manaCost": 75 },
        { "id": "dive_bomb", "name": "Dive Bomb", "description": "Dives at a ground target, dealing heavy damage and knocking back enemies.", "hotkey": "D", "cooldown": 15.0, "manaCost": 50 },
        { "id": "swooping_strike", "name": "Swooping Strike", "description": "First attack after moving deals bonus damage.", "isPassive": true },
        { "id": "cursed_presence", "name": "Cursed Presence", "description": "Enemies near the Jersey Devil have reduced healing.", "isPassive": true }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "jersey_devil_ready" }, { "type": "random_say", "texts": ["*demonic screech*", "*wing flapping*", "*hooves clattering*"], "chance": 1.0 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "jersey_devil_attack" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "jersey_devil_death" }] }
    }
