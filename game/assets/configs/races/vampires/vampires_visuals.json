  "portraits": {
    "style": "painted_gothic",
    "frameTexture": "textures/ui/portrait_frame_vampire.png",
    "backgroundTexture": "textures/ui/portrait_bg_vampire.png",
    "animatedEyes": true,
    "breathingEffect": false
  },

  "minimapColors": {
    "units": "#C41E3A",
    "buildings": "#8B0000",
    "heroes": "#FF0000",
    "allies": "#4B0082"
  },

  "audioVisualSync": {
    "attackImpact": {
      "screenShake": 0.1,
      "bloodSplash": true
    },
    "abilityImpact": {
      "screenFlash": true,
      "flashColor": "#8B0000",
      "flashDuration": 0.1
    },
    "deathImpact": {
      "dustCloud": true,
      "dustColor": "#2F0000"
    }
  }
