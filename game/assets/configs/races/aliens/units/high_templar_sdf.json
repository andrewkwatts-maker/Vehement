    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "hover", "condition": "isMoving" }, { "to": "cast_storm", "condition": "isCastingStorm" }, { "to": "cast_feedback", "condition": "isCastingFeedback" }, { "to": "merge", "condition": "isMerging" }, { "to": "death", "condition": "isDead" }] },
            "hover": { "animation": "hover", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "cast_storm", "condition": "isCastingStorm" }, { "to": "cast_feedback", "condition": "isCastingFeedback" }, { "to": "death", "condition": "isDead" }] },
            "cast_storm": { "animation": "cast_storm", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "hover", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "cast_feedback": { "animation": "cast_feedback", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "hover", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "merge": { "animation": "merge", "transitions": [] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "psionic_storm", "name": "Psionic Storm", "description": "Creates devastating storm of psionic energy dealing 80 damage over time.", "hotkey": "T", "energyCost": 75, "cooldown": 1.43 },
        { "id": "feedback", "name": "Feedback", "description": "Drains all energy from target, dealing damage equal to energy drained.", "hotkey": "F", "energyCost": 50, "cooldown": 0.71 },
        { "id": "archon_warp", "name": "Archon Warp", "description": "Two High Templars merge to form an Archon.", "hotkey": "C" }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "high_templar_warp_in" }, { "type": "spawn_effect", "effect": "warp_in_flash", "duration": 1.0 }] },
        "on_ability_storm": { "actions": [{ "type": "play_animation", "animation": "cast_storm" }, { "type": "play_sound", "sound": "psionic_storm_cast" }, { "type": "spawn_effect", "effect": "psionic_storm", "target": "ability_target" }] },
        "on_ability_feedback": { "actions": [{ "type": "play_animation", "animation": "cast_feedback" }, { "type": "play_sound", "sound": "feedback_cast" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "high_templar_death" }, { "type": "spawn_effect", "effect": "psionic_explosion" }] }
    },

    "effects": {
        "warp_in_flash": { "type": "flash", "color": [0.3, 0.7, 1.0, 0.8], "duration": 1.0 },
        "psionic_storm": { "type": "volume", "shape": "cylinder", "radius": 1.5, "height": 4.0, "particles": { "type": "psionic_lightning", "count": 100, "color": [0.4, 0.7, 1.0, 0.9] } },
        "psionic_explosion": { "type": "explosion", "radius": 2.0, "color": [0.4, 0.7, 1.0, 0.7], "particles": { "type": "psionic_sparks", "count": 60, "color": [0.5, 0.8, 1.0, 1.0] } }
    }
