    "skeleton": {
        "bones": [
            { "name": "root", "parent": null, "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "body", "parent": "root", "position": [0.0, 0.35, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "sensor_l", "parent": "body", "position": [-0.2, 0.0, 0.15], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "sensor_r", "parent": "body", "position": [0.2, 0.0, 0.15], "rotation": [0.0, 0.0, 0.0, 1.0] }
        ]
    },

    "animations": {
        "idle": {
            "duration": 3.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.5, "bones": { "root": { "position": [0.0, 0.05, 0.0] }, "body": { "rotation": [0.0, 0.05, 0.0, 0.999] } } },
                { "time": 3.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "hover": {
            "duration": 1.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.05, 0.0, 0.0, 0.999] } } },
                { "time": 0.5, "bones": { "root": { "position": [0.0, 0.03, 0.0] }, "body": { "rotation": [-0.05, 0.0, 0.0, 0.999] } } },
                { "time": 1.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.05, 0.0, 0.0, 0.999] } } }
            ]
        },
        "harvest": {
            "duration": 2.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "sensor_l": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "sensor_r": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.5, "bones": { "body": { "rotation": [0.0, 0.2, 0.0, 0.98] }, "sensor_l": { "rotation": [0.0, 0.0, 0.2, 0.98] }, "sensor_r": { "rotation": [0.0, 0.0, -0.2, 0.98] } } },
                { "time": 1.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "sensor_l": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "sensor_r": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.5, "bones": { "body": { "rotation": [0.0, -0.2, 0.0, 0.98] }, "sensor_l": { "rotation": [0.0, 0.0, -0.2, 0.98] }, "sensor_r": { "rotation": [0.0, 0.0, 0.2, 0.98] } } },
                { "time": 2.0, "bones": { "body": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "sensor_l": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "sensor_r": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "warp_in": {
            "duration": 1.5, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.5, 0.0], "scale": [0.0, 0.0, 0.0] } } },
                { "time": 0.75, "bones": { "root": { "position": [0.0, 0.2, 0.0], "scale": [1.2, 1.2, 1.2] } } },
                { "time": 1.5, "bones": { "root": { "position": [0.0, 0.0, 0.0], "scale": [1.0, 1.0, 1.0] } } }
            ]
        },
        "death": {
            "duration": 1.2, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.4, "bones": { "root": { "position": [0.0, 0.1, 0.0], "rotation": [0.1, 0.0, 0.1, 0.99] } }, "events": ["spark_burst"] },
                { "time": 0.8, "bones": { "root": { "position": [0.0, -0.1, 0.0], "rotation": [0.2, 0.3, 0.2, 0.9] } } },
                { "time": 1.2, "bones": { "root": { "position": [0.0, -0.3, 0.0], "rotation": [0.4, 0.5, 0.3, 0.71] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "hover", "condition": "isMoving" }, { "to": "harvest", "condition": "isHarvesting" }, { "to": "warp_in", "condition": "isWarping" }, { "to": "death", "condition": "isDead" }] },
            "hover": { "animation": "hover", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "harvest", "condition": "isHarvesting" }, { "to": "death", "condition": "isDead" }] },
            "harvest": { "animation": "harvest", "transitions": [{ "to": "idle", "condition": "!isHarvesting && !isMoving" }, { "to": "hover", "condition": "isMoving" }, { "to": "death", "condition": "isDead" }] },
            "warp_in": { "animation": "warp_in", "transitions": [{ "to": "idle", "condition": "animationComplete" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "gather", "name": "Gather", "description": "Harvests minerals or vespene gas.", "hotkey": "G" },
        { "id": "warp_structure", "name": "Warp Structure", "description": "Warps in a structure at the target location.", "hotkey": "B" }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "probe_warp_in" }, { "type": "spawn_effect", "effect": "warp_in_flash", "duration": 1.5 }] },
        "on_attack": { "actions": [{ "type": "play_sound", "sound": "probe_attack" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "probe_death" }, { "type": "spawn_effect", "effect": "energy_dissipate" }] }
    },

    "effects": {
        "warp_in_flash": { "type": "flash", "color": [0.3, 0.7, 1.0, 0.8], "duration": 1.5 },
        "energy_dissipate": { "type": "particles", "particles": { "type": "energy_sparks", "count": 30, "color": [0.3, 0.7, 1.0, 1.0] } }
    }
}
