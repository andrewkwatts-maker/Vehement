      "type": "active",
      "hotkey": "F",
      "cooldown": 30.0,
      "corpseCost": 3,
      "produces": "bone_fragments",
      "produceAmount": 10
    },
    {
      "id": "mass_construction",
      "name": "Mass Construction",
      "description": "Siege units train 25% faster",
      "type": "passive",
      "trainingSpeedBonus": 0.25,
      "scope": "siege"
    }
  ],

  "aura": {
    "id": "boneyard_aura",
    "name": "Siege Mastery",
    "radius": 20.0,
    "effects": [
      {
        "stat": "damage",
        "value": 0.15,
        "type": "percent",
        "scope": "undead_siege"
      }
    ]
