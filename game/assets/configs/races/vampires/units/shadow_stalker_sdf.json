            "walk": { "animation": "walk", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking && !isStealthed" }, { "to": "backstab", "condition": "isAttacking && isStealthed" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "walk", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "backstab": { "animation": "backstab", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "stealth": { "animation": "stealth", "transitions": [{ "to": "idle", "condition": "!isStealthed" }, { "to": "backstab", "condition": "isAttacking" }] },
            "death": { "animation": "death", "transitions": [] }
        }
