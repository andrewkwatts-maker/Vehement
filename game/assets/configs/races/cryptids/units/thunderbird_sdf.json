    "animationStateMachine": {
        "initialState": "hover",
        "states": {
            "hover": { "animation": "hover", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "buffet", "condition": "isBuffeting" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "hover", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "hover", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "buffet": { "animation": "buffet", "transitions": [{ "to": "hover", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "chain_lightning", "name": "Chain Lightning", "description": "Launches a bolt of lightning that jumps between enemies.", "hotkey": "C", "cooldown": 12.0, "manaCost": 100 },
        { "id": "storm_call", "name": "Storm Call", "description": "Summons a localized storm that damages and slows enemies.", "hotkey": "S", "cooldown": 35.0, "manaCost": 150 },
        { "id": "wing_buffet", "name": "Wing Buffet", "description": "Powerful wing beats knock back and damage nearby enemies.", "hotkey": "W", "cooldown": 20.0, "manaCost": 75 },
        { "id": "static_charge", "name": "Static Charge", "description": "Attacks build static charge on targets for bonus damage.", "isPassive": true }
    ],

