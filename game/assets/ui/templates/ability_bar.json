{
    "id": "ui.templates.ability_bar",
    "type": "ui",
    "name": "Ability Bar",
    "description": "Horizontal bar showing unit abilities with cooldowns",

    "props": [
        { "name": "abilities", "type": "std::vector<Ability*>", "required": true },
        { "name": "size", "type": "string", "default": "normal" }
    ],

    "template": {
        "tag": "div",
        "class": "ability-bar",
        "style": {
            "display": "flex",
            "gap": "4px",
            "padding": "4px"
        },
        "children": [
            {
                "tag": "list",
                ":items": "abilities",
                "itemTemplate": "ability_button",
                "style": {
                    "display": "flex",
                    "gap": "4px"
                }
            }
        ]
    }
}
