        { "id": "coagulate", "name": "Coagulate", "description": "Hardens blood form, reducing damage taken by 50% but immobilizing for 5 seconds.", "cooldown": 40.0, "duration": 5.0, "damageReduction": 0.5, "hotkey": "W" }
    ],

