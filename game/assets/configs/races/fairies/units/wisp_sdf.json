            { "name": "tail_tip", "parent": "tail", "position": [0.0, -0.1, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] }
        ]
    },

    "animations": {
        "idle": {
            "duration": 3.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "tail": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.75, "bones": { "root": { "position": [0.0, 0.45, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 0.38, 0.0, 0.92] }, "tail": { "rotation": [0.05, 0.0, 0.05, 0.997] } } },
                { "time": 1.5, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 0.71, 0.0, 0.71] }, "tail": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 2.25, "bones": { "root": { "position": [0.0, 0.45, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 0.92, 0.0, 0.38] }, "tail": { "rotation": [-0.05, 0.0, -0.05, 0.997] } } },
                { "time": 3.0, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 1.0, 0.0, 0.0] }, "tail": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "fly": {
            "duration": 1.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "tail": { "rotation": [0.15, 0.0, 0.0, 0.99] }, "tail_tip": { "rotation": [0.1, 0.0, 0.0, 0.995] } } },
                { "time": 0.5, "bones": { "root": { "position": [0.0, 0.45, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 0.71, 0.0, 0.71] }, "tail": { "rotation": [0.2, 0.0, 0.0, 0.98] }, "tail_tip": { "rotation": [0.15, 0.0, 0.0, 0.99] } } },
                { "time": 1.0, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "sparkle_orbit": { "rotation": [0.0, 1.0, 0.0, 0.0] }, "tail": { "rotation": [0.15, 0.0, 0.0, 0.99] }, "tail_tip": { "rotation": [0.1, 0.0, 0.0, 0.995] } } }
            ]
        },
        "harvest": {
            "duration": 2.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "core": { "scale": [1.0, 1.0, 1.0] }, "sparkle_orbit": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.5, "bones": { "core": { "scale": [1.1, 1.1, 1.1] }, "sparkle_orbit": { "rotation": [0.0, 0.5, 0.0, 0.87] } } },
                { "time": 1.0, "bones": { "core": { "scale": [0.95, 0.95, 0.95] }, "sparkle_orbit": { "rotation": [0.0, 0.87, 0.0, 0.5] } }, "events": ["absorb_essence"] },
                { "time": 1.5, "bones": { "core": { "scale": [1.05, 1.05, 1.05] }, "sparkle_orbit": { "rotation": [0.0, 1.0, 0.0, 0.0] } } },
                { "time": 2.0, "bones": { "core": { "scale": [1.0, 1.0, 1.0] }, "sparkle_orbit": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "build": {
            "duration": 1.5, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "core": { "scale": [1.0, 1.0, 1.0] } } },
                { "time": 0.375, "bones": { "root": { "position": [0.0, 0.5, 0.0] }, "core": { "scale": [1.15, 1.15, 1.15] } } },
                { "time": 0.75, "bones": { "root": { "position": [0.0, 0.35, 0.0] }, "core": { "scale": [0.9, 0.9, 0.9] } }, "events": ["infuse_nature"] },
                { "time": 1.125, "bones": { "root": { "position": [0.0, 0.45, 0.0] }, "core": { "scale": [1.1, 1.1, 1.1] } } },
                { "time": 1.5, "bones": { "root": { "position": [0.0, 0.4, 0.0] }, "core": { "scale": [1.0, 1.0, 1.0] } } }
            ]
        },
        "detonate": {
            "duration": 1.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "core": { "scale": [1.0, 1.0, 1.0] } } },
                { "time": 0.3, "bones": { "core": { "scale": [1.5, 1.5, 1.5] } } },
                { "time": 0.5, "bones": { "core": { "scale": [2.0, 2.0, 2.0] } }, "events": ["dispel_burst"] },
                { "time": 1.0, "bones": { "core": { "scale": [0.0, 0.0, 0.0] } } }
            ]
        },
        "death": {
            "duration": 1.5, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "core": { "scale": [1.0, 1.0, 1.0] }, "root": { "position": [0.0, 0.4, 0.0] } } },
                { "time": 0.5, "bones": { "core": { "scale": [1.3, 1.3, 1.3] }, "root": { "position": [0.0, 0.5, 0.0] } } },
                { "time": 1.0, "bones": { "core": { "scale": [0.5, 0.5, 0.5] }, "root": { "position": [0.0, 0.3, 0.0] } } },
                { "time": 1.5, "bones": { "core": { "scale": [0.0, 0.0, 0.0] }, "root": { "position": [0.0, 0.1, 0.0] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "harvest", "condition": "isHarvesting" }, { "to": "build", "condition": "isBuilding" }, { "to": "detonate", "condition": "isDetonating" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "death", "condition": "isDead" }] },
            "harvest": { "animation": "harvest", "transitions": [{ "to": "idle", "condition": "!isHarvesting" }, { "to": "death", "condition": "isDead" }] },
            "build": { "animation": "build", "transitions": [{ "to": "idle", "condition": "!isBuilding" }, { "to": "death", "condition": "isDead" }] },
            "detonate": { "animation": "detonate", "transitions": [{ "to": "death", "condition": "animationComplete" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "gather", "name": "Gather", "description": "Gather gold or harvest lumber from trees. Wisps do not destroy trees when harvesting.", "targetType": "resource" },
        { "id": "build", "name": "Build", "description": "Grow a living building from a seed.", "targetType": "building_placement" },
        { "id": "detonate", "name": "Detonate", "description": "Sacrifice the Wisp to dispel all magic in an area and damage summoned units.", "hotkey": "D", "manaCost": 0, "radius": 250, "dispelDamage": 225 },
        { "id": "renew", "name": "Renew", "description": "Channels energy to repair a building or restore mana to a unit.", "hotkey": "R", "targetType": "friendly" }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "wisp_birth" }, { "type": "spawn_effect", "effect": "nature_sparkle", "duration": 1.0 }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "spawn_effect", "effect": "wisp_fade", "duration": 1.5 }, { "type": "play_sound", "sound": "wisp_death" }] },
        "on_select": { "actions": [{ "type": "play_sound", "sound": "wisp_acknowledge" }] }
    },

    "effects": {
        "nature_sparkle": { "type": "burst", "particles": { "type": "sparkle", "count": 20, "color": [0.7, 0.95, 1.0, 1.0], "size": 0.05 } },
        "wisp_fade": { "type": "dissolve", "particles": { "type": "motes", "count": 30, "color": [0.8, 0.95, 1.0, 0.8], "size": 0.03, "velocity": [0.0, 0.5, 0.0] } }
    }
}
