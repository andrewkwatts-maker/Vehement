      },
      {
        "id": "blend_2",
        "type": "Blend",
        "position": [550, 250],
        "parameters": {
          "blend": 0.3,
          "blendMode": "add"
        }
      },
      {
        "id": "erosion_hydraulic",
        "type": "HydraulicErosion",
        "position": [700, 200],
        "parameters": {
          "iterations": 50000,
          "rainAmount": 0.008,
          "evaporation": 0.015,
          "sedimentCapacity": 3.5,
          "erosionStrength": 0.25,
          "depositionStrength": 0.2
        }
      },
      {
        "id": "erosion_thermal",
        "type": "ThermalErosion",
        "position": [850, 200],
        "parameters": {
          "iterations": 5000,
          "talusAngle": 42.0,
          "strength": 0.15
        }
      },
      {
        "id": "slope_map",
        "type": "Slope",
        "position": [1000, 100],
        "parameters": {
          "scale": 1.0
        }
      },
      {
        "id": "vegetation",
        "type": "VegetationPlacement",
        "position": [1150, 50],
        "parameters": {
          "density": 0.08,
          "minSlope": 0.0,
          "maxSlope": 35.0
        }
      },
      {
        "id": "rocks",
        "type": "ResourcePlacement",
        "position": [1150, 200],
        "parameters": {
          "resourceType": "rocks",
          "density": 0.015,
          "minSlope": 15.0,
          "maxSlope": 65.0,
          "clusterSize": 3.5
        }
      },
      {
        "id": "output",
        "type": "Output",
        "position": [1300, 200]
      }
    ],
    "connections": [
      {"from": "noise_base.value", "to": "blend_1.inputA"},
      {"from": "noise_mountains.ridgedHeightmap", "to": "blend_1.inputB"},
      {"from": "blend_1.result", "to": "blend_2.inputA"},
      {"from": "noise_detail.value", "to": "blend_2.inputB"},
      {"from": "blend_2.result", "to": "erosion_hydraulic.heightmap"},
      {"from": "erosion_hydraulic.erodedHeightmap", "to": "erosion_thermal.heightmap"},
      {"from": "erosion_thermal.erodedHeightmap", "to": "slope_map.heightmap"},
      {"from": "erosion_thermal.erodedHeightmap", "to": "output.heightmap"},
      {"from": "slope_map.slopeMap", "to": "vegetation.heightmap"},
      {"from": "slope_map.slopeMap", "to": "rocks.heightmap"},
      {"from": "vegetation.vegetationMap", "to": "output.vegetation"},
      {"from": "rocks.resourceMap", "to": "output.details"}
    ]
  },

  "metadata": {
    "author": "Claude AI",
