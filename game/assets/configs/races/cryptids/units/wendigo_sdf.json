            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "walk", "condition": "animationComplete && isMoving" }, { "to": "frenzy", "condition": "isFrenzied" }, { "to": "death", "condition": "isDead" }] },
            "consume": { "animation": "consume", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "frenzy": { "animation": "frenzy", "transitions": [{ "to": "idle", "condition": "!isFrenzied && !isMoving" }, { "to": "walk", "condition": "!isFrenzied && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
