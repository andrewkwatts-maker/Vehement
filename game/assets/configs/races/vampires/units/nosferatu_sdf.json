    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "glide", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "blood_drain", "condition": "useBloodDrain" }, { "to": "transform_bat", "condition": "useTransform" }, { "to": "death", "condition": "isDead" }] },
            "glide": { "animation": "glide", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "transform_bat", "condition": "useTransform" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "glide", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "blood_drain": { "animation": "blood_drain", "transitions": [{ "to": "idle", "condition": "animationComplete" }, { "to": "death", "condition": "isDead" }] },
            "transform_bat": { "animation": "transform_bat", "transitions": [{ "to": "bat_form", "condition": "animationComplete" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

