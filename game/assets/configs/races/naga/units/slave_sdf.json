    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "walk", "condition": "isMoving" }, { "to": "gather", "condition": "isGathering" }, { "to": "attack", "condition": "isAttacking" }, { "to": "swim", "condition": "isSwimming" }, { "to": "death", "condition": "isDead" }] },
            "walk": { "animation": "walk", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "swim", "condition": "isSwimming" }, { "to": "death", "condition": "isDead" }] },
            "swim": { "animation": "swim", "transitions": [{ "to": "walk", "condition": "!isSwimming && isMoving" }, { "to": "idle", "condition": "!isSwimming && !isMoving" }, { "to": "death", "condition": "isDead" }] },
            "gather": { "animation": "gather", "transitions": [{ "to": "idle", "condition": "!isGathering" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "walk", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
