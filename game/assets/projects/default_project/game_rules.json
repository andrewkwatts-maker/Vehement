{
  "type": "game_rules",
  "version": "1.0",
  "name": "Fantasy RTS",
  "description": "Default game rules for fantasy RTS gameplay",

  "startingResources": {
    "gold": 500,
    "wood": 300,
    "food": 200,
    "stone": 100
  },

  "dayNightCycle": {
    "enabled": true,
    "dayLengthMinutes": 20,
    "startTimeOfDay": 0.25,
    "nightSpeedMultiplier": 1.5,
    "enableNightEvents": true
  },

  "combat": {
    "friendlyFire": false,
    "unitCap": 200,
    "populationPerUnit": {
      "worker": 1,
      "soldier": 2,
      "hero": 5
    },
    "damageTypes": ["physical", "magical", "fire", "ice", "poison"],
    "criticalHitChance": 0.05,
    "criticalHitMultiplier": 2.0
  },

  "economy": {
    "resourceGatheringEnabled": true,
    "tradingEnabled": true,
    "marketPriceFluctuation": true,
    "taxRate": 0.1
  },

  "technology": {
    "researchEnabled": true,
    "techTree": "assets/data/tech_tree_fantasy.json",
    "maxTechLevel": 5,
    "researchSpeedMultiplier": 1.0
  },

  "construction": {
    "buildingsEnabled": true,
    "maxBuildingsPerPlayer": 50,
    "constructionTime": "normal",
    "allowMultipleWorkers": true
  },

  "victory": {
    "conditions": [
      {
        "type": "elimination",
        "description": "Destroy all enemy structures",
        "enabled": true
      },
      {
        "type": "conquest",
        "description": "Control 75% of the map",
        "enabled": true,
        "threshold": 0.75
      },
      {
        "type": "technology",
        "description": "Research all technologies",
        "enabled": false
      }
    ]
  },

  "difficulty": {
    "levels": ["easy", "normal", "hard", "expert"],
    "default": "normal",
    "aiSettings": {
      "easy": {
        "reactionTime": 2.0,
        "accuracyMultiplier": 0.7,
        "resourceBonus": 1.0
      },
      "normal": {
        "reactionTime": 1.0,
        "accuracyMultiplier": 1.0,
        "resourceBonus": 1.0
      },
      "hard": {
        "reactionTime": 0.5,
        "accuracyMultiplier": 1.2,
        "resourceBonus": 1.3
      },
      "expert": {
        "reactionTime": 0.3,
        "accuracyMultiplier": 1.5,
        "resourceBonus": 1.5
      }
    }
  }
}
