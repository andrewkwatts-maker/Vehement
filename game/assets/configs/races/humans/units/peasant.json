{
    "id": "human_peasant",
    "type": "unit",
    "race": "humans",
    "name": "Peasant",
    "description": "The backbone of Valorheim's economy. Peasants gather resources, construct buildings, and can be called to arms in times of need.",

    "tags": ["worker", "civilian", "gatherer", "builder", "tier1"],

    "tier": 1,
    "age_requirement": 1,

    "model": {
        "path": "models/races/humans/units/peasant.obj",
        "scale": [1.0, 1.0, 1.0],
        "offset": [0.0, 0.0, 0.0]
    },

    "textures": {
        "diffuse": "textures/races/humans/units/peasant_diffuse.png",
        "normal": "textures/races/humans/units/peasant_normal.png"
    },

    "collision": {
        "shapes": [
            {
                "type": "capsule",
                "radius": 0.25,
                "height": 1.6,
                "offset": [0.0, 0.8, 0.0]
            }
        ],
        "body_type": "dynamic",
        "mass": 70.0,
        "layer": "unit"
    },

    "stats": {
        "health": 40,
        "maxHealth": 40,
        "healthRegen": 0.25,
        "armor": 0,
        "magicResist": 0,
        "moveSpeed": 4.5,
        "turnRate": 360.0
    },

    "combat": {
        "attackDamage": 5,
        "attackSpeed": 1.0,
        "attackRange": 1.0,
        "damageType": "normal",
        "armorType": "unarmored",
        "attackType": "melee"
    },

    "gathering": {
        "enabled": true,
        "rates": {
            "gold": 10,
            "wood": 12,
            "stone": 8,
            "food": 10
        },
        "carry_capacity": {
            "gold": 10,
            "wood": 15,
            "stone": 10,
            "food": 12
        }
    },

    "construction": {
        "enabled": true,
        "speed_multiplier": 1.0,
        "can_repair": true,
        "repair_rate": 5.0
