    { "name": "CastStart", "time": 0.0, "function": "OnCastStart" },
    { "name": "ChargeSound", "time": 0.1, "function": "PlaySound", "parameter": "spell_charge" },
    { "name": "ChargeParticles", "time": 0.2, "function": "SpawnParticle", "parameter": "spell_charge_fx" },
    { "name": "CastPeak", "time": 0.6, "function": "OnCastPeak" },
    { "name": "ReleaseParticles", "time": 0.9, "function": "SpawnParticle", "parameter": "spell_release_fx" },
    { "name": "ReleaseSound", "time": 0.9, "function": "PlaySound", "parameter": "spell_release" },
    { "name": "SpellRelease", "time": 0.9, "function": "OnSpellRelease" },
    { "name": "CastEnd", "time": 1.5, "function": "OnCastEnd" }
  ],

  "rootMotion": {
    "enabled": false
  },

  "blending": {
    "blendInTime": 0.15,
    "blendOutTime": 0.25,
    "blendMode": "override"
  },

  "metadata": {
    "author": "Animation Team",
    "tags": ["magic", "cast", "spell", "one_shot", "upper_body"]
  }
