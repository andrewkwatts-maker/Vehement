  "visual_scripting_graph": {
    "comment": "Node graph definition for procedural generation pipeline",
    "nodes": [
      {
        "id": "noise_base",
        "type": "PerlinNoise",
        "position": [100, 100],
        "parameters": {
          "frequency": 0.003,
          "octaves": 6,
          "persistence": 0.52,
          "lacunarity": 2.1
        }
      },
      {
        "id": "noise_mountains",
        "type": "Ridge",
        "position": [100, 250],
        "parameters": {
          "sharpness": 0.7,
          "offset": 0.3
        }
      },
      {
        "id": "noise_detail",
        "type": "SimplexNoise",
        "position": [100, 400],
        "parameters": {
          "frequency": 0.025,
          "octaves": 4,
          "persistence": 0.6,
          "lacunarity": 2.0
        }
      },
      {
        "id": "blend_1",
        "type": "Blend",
        "position": [400, 175],
        "parameters": {
          "blend": 0.6,
          "blendMode": "add"
