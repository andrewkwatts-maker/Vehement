        "on_attack": { "actions": [{ "type": "spawn_projectile", "projectile": "fae_breath", "target": "attack_target" }, { "type": "play_sound", "sound": "faerie_dragon_breath" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "faerie_dragon_death" }, { "type": "spawn_effect", "effect": "magic_dissipate" }] }
    },

    "effects": {
