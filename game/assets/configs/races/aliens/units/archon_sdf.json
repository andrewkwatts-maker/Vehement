    "animationStateMachine": {
        "initialState": "merge",
        "states": {
            "merge": { "animation": "merge", "transitions": [{ "to": "idle", "condition": "animationComplete" }] },
            "idle": { "animation": "idle", "transitions": [{ "to": "hover", "condition": "isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "death", "condition": "isDead" }] },
            "hover": { "animation": "hover", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "attack", "condition": "isAttacking" }, { "to": "death", "condition": "isDead" }] },
            "attack": { "animation": "attack", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "hover", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "psi_blast", "name": "Psionic Shockwave", "description": "Unleashes a devastating blast of psionic energy that deals splash damage to nearby enemies.", "hotkey": "A" }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_animation", "animation": "merge" }, { "type": "play_sound", "sound": "archon_merge" }, { "type": "spawn_effect", "effect": "merge_burst", "duration": 2.5 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "play_sound", "sound": "archon_attack" }, { "type": "spawn_effect", "effect": "psi_shockwave" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "archon_death" }, { "type": "spawn_effect", "effect": "energy_dissipate", "duration": 1.8 }] }
    },

    "effects": {
        "merge_burst": { "type": "explosion", "radius": 2.0, "color": [0.4, 0.7, 1.0, 0.8], "duration": 2.5, "particles": { "type": "energy_wisps", "count": 100, "color": [0.5, 0.8, 1.0, 1.0] } },
        "psi_shockwave": { "type": "shockwave", "radius": 1.5, "color": [0.4, 0.75, 1.0, 0.7], "duration": 0.5 },
        "energy_dissipate": { "type": "implosion", "radius": 1.5, "color": [0.4, 0.7, 1.0, 0.6], "duration": 1.8, "particles": { "type": "energy_sparks", "count": 80, "color": [0.5, 0.8, 1.0, 1.0] } }
    }
