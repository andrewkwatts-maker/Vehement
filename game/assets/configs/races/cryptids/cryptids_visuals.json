{
  "race": "cryptids",
  "name": "The Hidden Ones Visual Configuration",

  "colorPalette": {
    "primary": "#2d1b4e",
    "secondary": "#4a2c2a",
    "accent": "#ff4444",
    "highlight": "#00ff88",
    "shadow": "#0a0510",
    "mist": "#1a2a1a"
  },

  "uiTheme": {
    "name": "eldritch_dark",
    "fontFamily": "CryptidGothic",
    "borderStyle": "organic_twisted",
    "buttonStyle": "bone_carved",
    "panelOpacity": 0.85,
    "glowColor": "#ff4444",
    "selectionColor": "#00ff88"
  },

  "environmentEffects": {
    "mistEffect": {
      "enabled": true,
      "color": "#1a2a1a",
      "density": 0.4,
      "height": 50,
      "spreadRadius": 800,
      "particleCount": 200
    },
    "ambientParticles": {
      "enabled": true,
      "types": ["shadow_wisps", "essence_motes", "fear_tendrils"],
      "density": 0.3
    },
    "groundEffect": {
      "enabled": true,
      "texture": "textures/terrain/cryptid_ground.png",
      "blendMode": "multiply",
      "opacity": 0.6
    }
  },

  "unitVisuals": {
    "silhouetteGlow": {
      "enabled": true,
      "color": "#ff4444",
      "intensity": 0.3,
      "pulseRate": 2.0
    },
    "eyeGlow": {
      "enabled": true,
      "color": "#ff0000",
      "intensity": 0.8
    },
    "shadowTrail": {
      "enabled": true,
      "color": "#000000",
      "opacity": 0.5,
      "length": 3
    },
    "fearIndicator": {
      "enabled": true,
      "icon": "textures/icons/fear_stack.png",
      "maxStacks": 5,
      "stackColor": "#ff4444"
    }
  },

  "buildingVisuals": {
    "style": "organic_horror",
    "materials": ["bone", "twisted_wood", "shadow_stone", "flesh"],
    "ambientEffects": {
      "mistEmission": true,
      "shadowPulsing": true,
      "eyesWatching": true
    },
    "constructionEffect": {
      "type": "shadow_coalesce",
      "duration": 2.0,
      "particles": "effects/building_construct.vfx"
    },
    "destructionEffect": {
      "type": "shadow_dissipate",
      "duration": 1.5,
      "particles": "effects/building_destroy.vfx"
    }
  },

  "abilityVisuals": {
    "transformation": {
      "transitionEffect": "effects/transformation.vfx",
      "duration": 0.5,
      "soundEffect": "audio/abilities/transform.ogg"
    },
    "fear": {
      "victimEffect": "effects/fear_victim.vfx",
      "fleeAnimation": "fear_flee",
      "panicIndicator": "textures/icons/panic.png"
    },
    "ambush": {
      "strikeEffect": "effects/ambush_strike.vfx",
      "criticalEffect": "effects/critical_ambush.vfx"
    },
    "mimicry": {
      "copyEffect": "effects/copy_form.vfx",
      "revealEffect": "effects/true_form_reveal.vfx"
    }
  },

  "portraits": {
    "style": "shadowed_horror",
    "backgroundColor": "#1a0a2e",
    "borderTexture": "textures/ui/portrait_border_cryptid.png",
    "animatedBackground": true,
    "eyeTrackingEnabled": true
  },

  "minimapIcons": {
    "unitColor": "#ff4444",
    "buildingColor": "#4a2c2a",
    "heroColor": "#00ff88",
    "style": "glowing_silhouette"
  },

  "cursor": {
    "default": "cursors/cryptid/default.png",
    "move": "cursors/cryptid/move.png",
    "attack": "cursors/cryptid/attack.png",
    "ability": "cursors/cryptid/ability.png",
    "invalid": "cursors/cryptid/invalid.png",
    "trailEffect": true,
    "trailColor": "#ff4444"
  },

  "selectionCircles": {
    "friendly": {
      "color": "#00ff88",
      "texture": "textures/ui/selection_cryptid.png"
    },
    "enemy": {
      "color": "#ff4444",
      "texture": "textures/ui/selection_enemy.png"
    },
    "style": "pulsing_shadow"
  },

  "weatherEffects": {
    "preferredWeather": ["fog", "night", "eclipse"],
    "weatherModifier": {
      "fog": {"visibility": 0.6, "unitBonus": 1.1},
      "night": {"visibility": 0.7, "unitBonus": 1.25},
      "eclipse": {"visibility": 0.5, "unitBonus": 1.3}
    }
  },

  "dayNightCycle": {
    "dayPenalty": {
      "enabled": true,
      "damageReduction": 0.1,
      "visionReduction": 0.15
    },
    "nightBonus": {
      "enabled": true,
      "damageBonus": 0.15,
      "speedBonus": 0.1,
      "stealthBonus": 0.2
    }
  }
}
