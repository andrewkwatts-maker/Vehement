{
    // Weakened - Stat Reduction Debuff
    // Reduces damage output and defensive capabilities

    "id": "effect_weakened",
    "name": "Weakened",
    "description": "Your strength has been sapped, reducing combat effectiveness.",
    "type": "debuff",
    "tags": ["debuff", "stat_reduction", "damage_reduction"],
    "categories": ["combat_debuff"],

    "duration": 8.0,
    "duration_type": "timed",

    "stacking": {
        "mode": "intensity",
        "max_stacks": 3,
        "intensity_per_stack": 0.5
    },

    "modifiers": [
        {
            "stat": "damage",
            "op": "percent",
            "value": -20
        },
        {
            "stat": "physical_damage",
            "op": "percent",
            "value": -15
        },
        {
            "stat": "armor",
            "op": "percent",
            "value": -15
        },
        {
            "stat": "crit_chance",
            "op": "add",
            "value": -5
        }
    ],

    "visual": {
        "icon": "icons/effects/weakened.png",
        "particle": "particles/weakness_chains.json",
        "tint": [0.5, 0.5, 0.5, 1.0],
        "glow": 0.1
    },

    "events": {
        "on_apply": "scripts/effects/weakened_apply.py"
    },

    "dispellable": true,
    "purgeable": true,
    "priority": 0
}
