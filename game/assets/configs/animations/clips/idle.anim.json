{
  "$schema": "../../schemas/animation_clip.schema.json",
  "id": "anim_idle",
  "name": "Idle",
  "description": "Standard idle animation with subtle breathing motion",
  "version": "1.0",
  "duration": 3.0,
  "frameRate": 30,
  "looping": true,
  "playbackSpeed": 1.0,
  "skeleton": "humanoid_standard",

  "bones": {
    "Root": {
      "enabled": true,
      "interpolation": "linear",
      "keyframes": [
        { "time": 0.0, "position": [0, 0, 0], "rotation": [0, 0, 0, 1], "scale": [1, 1, 1] },
        { "time": 3.0, "position": [0, 0, 0], "rotation": [0, 0, 0, 1], "scale": [1, 1, 1] }
      ]
    },
    "Spine": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1], "tangentMode": "auto" },
        { "time": 1.5, "rotation": [0.01, 0, 0, 0.9999], "tangentMode": "auto" },
        { "time": 3.0, "rotation": [0, 0, 0, 1], "tangentMode": "auto" }
      ]
    },
    "Spine1": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 1.5, "rotation": [0.015, 0, 0, 0.9999] },
        { "time": 3.0, "rotation": [0, 0, 0, 1] }
      ]
    },
    "Spine2": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 1.5, "rotation": [0.02, 0, 0, 0.9998] },
        { "time": 3.0, "rotation": [0, 0, 0, 1] }
      ]
    },
    "Neck": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 1.5, "rotation": [-0.01, 0, 0, 0.9999] },
        { "time": 3.0, "rotation": [0, 0, 0, 1] }
      ]
    },
    "Head": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0, 1] },
        { "time": 0.75, "rotation": [0, 0.01, 0, 0.9999] },
        { "time": 1.5, "rotation": [0, 0, 0, 1] },
        { "time": 2.25, "rotation": [0, -0.01, 0, 0.9999] },
        { "time": 3.0, "rotation": [0, 0, 0, 1] }
      ]
    },
    "LeftShoulder": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, 0.05, 0.9987] },
        { "time": 1.5, "rotation": [0, 0, 0.06, 0.9982] },
        { "time": 3.0, "rotation": [0, 0, 0.05, 0.9987] }
      ]
    },
    "LeftArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.05, 0, 0.1, 0.9937] },
        { "time": 3.0, "rotation": [0.05, 0, 0.1, 0.9937] }
      ]
    },
    "RightShoulder": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0, 0, -0.05, 0.9987] },
        { "time": 1.5, "rotation": [0, 0, -0.06, 0.9982] },
        { "time": 3.0, "rotation": [0, 0, -0.05, 0.9987] }
      ]
    },
    "RightArm": {
      "enabled": true,
      "interpolation": "bezier",
      "keyframes": [
        { "time": 0.0, "rotation": [0.05, 0, -0.1, 0.9937] },
        { "time": 3.0, "rotation": [0.05, 0, -0.1, 0.9937] }
      ]
    }
  },

  "events": [
    { "name": "BreathIn", "time": 0.0, "function": "OnBreathe", "parameter": "in" },
    { "name": "BreathOut", "time": 1.5, "function": "OnBreathe", "parameter": "out" }
  ],

  "rootMotion": {
    "enabled": false
  },

  "blending": {
    "blendInTime": 0.25,
    "blendOutTime": 0.25,
    "blendMode": "override"
  },

  "metadata": {
    "author": "Animation Team",
    "tags": ["idle", "standing", "loop", "base"]
  }
}
