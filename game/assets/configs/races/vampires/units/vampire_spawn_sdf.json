        "on_kill": { "actions": [{ "type": "trigger_ability", "ability": "frenzy" }, { "type": "spawn_effect", "effect": "blood_spray" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "vampire_spawn_death" }, { "type": "spawn_effect", "effect": "ash_dissolve" }] }
    }
