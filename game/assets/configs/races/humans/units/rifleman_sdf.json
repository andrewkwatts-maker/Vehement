        "on_attack": { "actions": [{ "type": "play_animation", "animation": "attack" }, { "type": "spawn_projectile", "projectile": "bullet", "target": "attack_target" }, { "type": "play_sound", "sound": "rifle_shot" }, { "type": "spawn_effect", "effect": "muzzle_flash", "position": "weapon" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "rifleman_death" }] }
    },

