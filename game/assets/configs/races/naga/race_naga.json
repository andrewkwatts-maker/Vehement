{
    "id": "race_naga",
    "name": "Depths of Nazjatar",
    "description": "An ancient aquatic serpentine empire that rules the ocean depths. Masters of water magic and venom, the Naga command fearsome sea creatures and wield the power of the tides.",
    "lore": "Once proud inhabitants of a glorious island kingdom, the Naga were transformed by dark magic when their home sank beneath the waves. Now they dwell in the crushing depths of the ocean, their bodies twisted into serpentine forms but their ambition unchanged. They seek to reclaim the surface world and establish dominion over all who breathe air.",
    "icon": "icons/races/naga.png",
    "banner": "textures/races/naga_banner.png",
    "color": "#1E90FF",
    "secondary_color": "#00CED1",
    "accent_color": "#7B68EE",

    "theme": {
        "architecture": "coral_organic",
        "aesthetic": "serpentine_aquatic",
        "music_set": "music/races/naga",
        "ambient_sounds": "sounds/ambient/underwater",
        "ui_style": "naga_depths"
    },

    "strengths": [
        {
            "id": "water_magic",
            "name": "Masters of the Tides",
            "description": "Naga spellcasters excel at water and frost magic, able to call upon devastating tidal waves and freezing currents.",
            "modifier": {"stat": "water_spell_power", "type": "percent", "value": 25}
        },
        {
            "id": "amphibious_forces",
            "name": "Amphibious Forces",
            "description": "Most Naga units can traverse water freely, allowing unmatched map mobility on aquatic terrain.",
            "modifier": {"stat": "water_movement_speed", "type": "percent", "value": 50}
        },
        {
            "id": "venomous_attacks",
            "name": "Venomous Strikes",
            "description": "Many Naga units apply poison damage over time, wearing down enemies through attrition.",
            "modifier": {"stat": "poison_damage", "type": "percent", "value": 20}
        },
        {
            "id": "aquatic_regeneration",
            "name": "Aquatic Regeneration",
            "description": "Naga units regenerate health faster when in or near water.",
            "modifier": {"stat": "water_health_regen", "type": "percent", "value": 100}
        }
    ],

    "weaknesses": [
        {
            "id": "fire_vulnerability",
            "name": "Vulnerable to Flame",
            "description": "The aquatic nature of the Naga makes them especially susceptible to fire damage.",
            "modifier": {"stat": "fire_resistance", "type": "percent", "value": -25}
        },
        {
            "id": "expensive_structures",
            "name": "Deep Construction",
            "description": "Naga structures require exotic materials from the ocean depths, increasing building costs.",
            "modifier": {"stat": "building_cost", "type": "percent", "value": 15}
        },
        {
            "id": "desert_penalty",
            "name": "Desiccation",
            "description": "Naga units suffer penalties in arid environments far from water.",
            "modifier": {"stat": "desert_stats", "type": "percent", "value": -20}
        }
    ],

    "unique_mechanics": [
        {
            "id": "amphibious",
            "name": "Amphibious",
            "description": "Most Naga units can move through water terrain at full speed and attack while swimming.",
            "icon": "icons/mechanics/amphibious.png"
        },
        {
            "id": "tidal_power",
            "name": "Tidal Power",
            "description": "Naga units gain +15% damage and +25% ability power when within 10 tiles of deep water.",
            "icon": "icons/mechanics/tidal_power.png",
            "effect": {
                "trigger": "near_water",
                "radius": 10,
                "modifiers": [
                    {"stat": "damage", "type": "percent", "value": 15},
                    {"stat": "ability_power", "type": "percent", "value": 25}
                ]
            }
        },
        {
            "id": "venom",
            "name": "Venom",
            "description": "Many Naga attacks apply Venom, dealing damage over time and reducing healing received.",
            "icon": "icons/mechanics/venom.png",
            "effect": {
                "id": "effect_naga_venom",
                "damage_per_second": 5,
                "duration": 8,
                "healing_reduction": 30,
                "stacks": 3
            }
        },
        {
            "id": "water_regeneration",
            "name": "Water Regeneration",
            "description": "Naga units regenerate 2% max HP per second while in water.",
            "icon": "icons/mechanics/water_regen.png",
            "effect": {
                "trigger": "in_water",
                "health_regen_percent": 2
            }
        }
    ],

    "resources": {
        "primary": ["gold", "coral"],
        "secondary": ["pearls", "abyssal_essence"],
        "special": "tidal_favor",
        "resource_bonuses": {
