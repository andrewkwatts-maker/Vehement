            ]
        },
        "construction": {
            "duration": 60.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "constructionProgress": 0.0 },
                { "time": 60.0, "constructionProgress": 1.0 }
            ]
        }
    },

