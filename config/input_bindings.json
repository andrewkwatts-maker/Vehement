    "presets": {
      "default": {
        "name": "Default",
        "description": "Standard WASD + Mouse controls"
      },
      "lefty": {
        "name": "Left-Handed",
        "description": "Arrow keys + Right-hand mouse",
        "overrides": {
          "MoveForward": { "keyboard": [{ "code": 265, "modifiers": 0 }] },
          "MoveBackward": { "keyboard": [{ "code": 264, "modifiers": 0 }] },
          "MoveLeft": { "keyboard": [{ "code": 263, "modifiers": 0 }] },
          "MoveRight": { "keyboard": [{ "code": 262, "modifiers": 0 }] }
        }
      },
      "controller_only": {
        "name": "Controller Only",
        "description": "Full gamepad support without keyboard/mouse",
        "settings": {
          "gamepadSensitivityX": 1.5,
          "gamepadSensitivityY": 1.2
        }
      }
    },

    "axis_mappings": {
      "MoveHorizontal": {
        "negative": "MoveLeft",
        "positive": "MoveRight"
      },
      "MoveVertical": {
        "negative": "MoveBackward",
        "positive": "MoveForward"
      },
      "LookHorizontal": {
        "type": "mouse_x",
        "gamepad_axis": 2,
        "sensitivity": 1.0
      },
      "LookVertical": {
        "type": "mouse_y",
        "gamepad_axis": 3,
        "sensitivity": 1.0,
        "invert": false
      }
    }
