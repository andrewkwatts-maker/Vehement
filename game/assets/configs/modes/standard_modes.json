{
  "version": "1.0",
  "description": "Standard built-in game modes",
  "modes": [
    {
      "id": "melee",
      "name": "Melee",
      "description": "Classic competitive mode. Defeat all enemy players by destroying their buildings and units.",
      "category": "standard",
      "icon": "icons/modes/melee.png",
      "thumbnail": "thumbnails/modes/melee.png",
      "minPlayers": 2,
      "maxPlayers": 8,
      "suggestedPlayers": "2-4",
      "estimatedDuration": "15-45 minutes",
      "isRanked": true,
      "rules": {
        "victoryConditions": [
          {
            "type": "elimination",
            "description": "Destroy all enemy buildings",
            "teamBased": true
          }
        ],
        "defeatConditions": [
          {
            "type": "all_buildings_destroyed",
            "description": "All your buildings are destroyed"
          }
        ],
        "teamSettings": {
          "teamsEnabled": true,
          "allowTeamChange": false,
          "sharedVision": true,
          "sharedControl": false,
          "fixedTeams": true
        }
      },
      "economy": {
        "startingResources": {
          "gold": 500,
          "lumber": 150,
          "food": 10,
          "foodCap": 100
        },
        "upkeep": {
          "enabled": true,
          "lowThreshold": 40,
          "highThreshold": 80
        }
      },
      "units": {
        "heroCap": 3,
        "heroSettings": {
          "enabled": true,
          "startingLevel": 1,
          "maxLevel": 10,
          "reviveEnabled": true
        }
      },
      "mapSettings": {
        "fogOfWar": "full",
        "neutralHostile": true,
        "dayNightCycle": {
          "enabled": true,
          "dayDuration": 480,
          "nightDuration": 480
        }
      }
    },
