    "animations": {
        "idle": {
            "duration": 4.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 2.0, "bones": { "root": { "position": [0.0, 0.05, 0.0] }, "body": { "rotation": [0.01, 0.0, 0.01, 0.9999] } } },
                { "time": 4.0, "bones": { "root": { "position": [0.0, 0.0, 0.0] }, "body": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "fly": {
            "duration": 2.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "body": { "rotation": [0.02, 0.0, 0.0, 0.9998] } } },
                { "time": 1.0, "bones": { "body": { "rotation": [-0.02, 0.0, 0.0, 0.9998] } } },
                { "time": 2.0, "bones": { "body": { "rotation": [0.02, 0.0, 0.0, 0.9998] } } }
            ]
        },
        "launch": {
            "duration": 0.8, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "hangar_l": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "hangar_r": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.3, "bones": { "hangar_l": { "rotation": [0.0, 0.0, 0.05, 0.999] }, "hangar_r": { "rotation": [0.0, 0.0, -0.05, 0.999] } }, "events": ["interceptor_launch"] },
                { "time": 0.8, "bones": { "hangar_l": { "rotation": [0.0, 0.0, 0.0, 1.0] }, "hangar_r": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "death": {
            "duration": 4.0, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.0, "bones": { "root": { "position": [0.0, -0.3, 0.0], "rotation": [0.1, 0.0, 0.1, 0.99] } }, "events": ["explosion_1"] },
                { "time": 2.0, "bones": { "root": { "position": [0.0, -1.0, 0.2], "rotation": [0.2, 0.1, 0.15, 0.96] } }, "events": ["explosion_2"] },
                { "time": 3.0, "bones": { "root": { "position": [0.0, -2.0, 0.4], "rotation": [0.3, 0.15, 0.2, 0.92] } }, "events": ["explosion_3"] },
                { "time": 4.0, "bones": { "root": { "position": [0.0, -4.0, 0.6], "rotation": [0.4, 0.2, 0.25, 0.86] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "fly", "condition": "isMoving" }, { "to": "launch", "condition": "isLaunching" }, { "to": "death", "condition": "isDead" }] },
            "fly": { "animation": "fly", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "launch", "condition": "isLaunching" }, { "to": "death", "condition": "isDead" }] },
            "launch": { "animation": "launch", "transitions": [{ "to": "idle", "condition": "animationComplete && !isMoving" }, { "to": "fly", "condition": "animationComplete && isMoving" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "build_interceptor", "name": "Build Interceptor", "description": "Builds an interceptor for 15 minerals. Maximum 8.", "hotkey": "I", "autocast": true },
        { "id": "release_interceptors", "name": "Release Interceptors", "description": "Releases all interceptors to attack.", "hotkey": "R" }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "carrier_online" }, { "type": "spawn_effect", "effect": "warp_in_massive", "duration": 2.5 }] },
        "on_attack": { "actions": [{ "type": "play_animation", "animation": "launch" }, { "type": "play_sound", "sound": "interceptor_launch" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "carrier_death" }, { "type": "spawn_effect", "effect": "capital_explosion" }] }
    },

    "effects": {
        "warp_in_massive": { "type": "flash", "color": [0.3, 0.7, 1.0, 0.9], "duration": 2.5 },
        "capital_explosion": { "type": "explosion", "radius": 5.0, "color": [0.4, 0.7, 1.0, 0.9], "particles": { "type": "massive_debris", "count": 100, "color": [0.5, 0.55, 0.6, 1.0] } }
    }
