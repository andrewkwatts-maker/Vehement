    "secondary": "#2F0000",
    "accent": "#FF0000",
    "tertiary": "#4B0082",
    "highlight": "#C41E3A",
    "shadow": "#1a0000",
    "blood": "#8B0000",
    "mist": "#4A4A6A"
  },

