{
  "type": "light",
  "version": "1.0",
  "name": "Campfire",
  "description": "Emissive mesh light using material function",
  "author": "Nova3D Team",
  "tags": ["emissive", "fire", "area-light"],

  "lightType": "emissive_mesh",
  "color": [1.0, 0.5, 0.2],
  "intensity": 8.0,
  "temperature": 1500.0,
  "useTemperature": true,

  "mesh": "assets/models/campfire_flames.obj",
  "emissiveMaterial": "assets/materials/fire_emissive.json",

  "position": [0.0, 0.5, 0.0],
  "radius": 6.0,

  "castsShadows": false,

  "materialFunction": {
    "type": "noise",
    "enabled": true,
    "frequency": 3.0,
    "octaves": 3,
    "amplitude": 0.4,
    "speed": 1.5,
    "affectsIntensity": true,
    "affectsColor": true
  },

  "particles": {
    "enabled": true,
    "particleSystem": "assets/vfx/fire.json"
  },

  "audioEmitter": {
    "sound": "assets/audio/sfx/fire_loop.wav",
    "volume": 0.5,
    "looping": true,
    "spatial": true,
    "minDistance": 2.0,
    "maxDistance": 15.0
  }
}
