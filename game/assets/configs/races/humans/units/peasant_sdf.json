    "skeleton": {
        "bones": [
            { "name": "root", "parent": null, "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "spine", "parent": "root", "position": [0.0, 0.7, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "head", "parent": "spine", "position": [0.0, 0.45, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "arm_l", "parent": "spine", "position": [-0.12, 0.25, 0.0], "rotation": [0.0, 0.0, 0.1, 0.995] },
            { "name": "arm_r", "parent": "spine", "position": [0.12, 0.25, 0.0], "rotation": [0.0, 0.0, -0.1, 0.995] },
            { "name": "leg_l", "parent": "root", "position": [-0.06, 0.65, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] },
            { "name": "leg_r", "parent": "root", "position": [0.06, 0.65, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] }
        ]
    },

    "animations": {
        "idle": {
            "duration": 2.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "spine": { "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 1.0, "bones": { "spine": { "rotation": [0.02, 0.0, 0.0, 0.9998] } } },
                { "time": 2.0, "bones": { "spine": { "rotation": [0.0, 0.0, 0.0, 1.0] } } }
            ]
        },
        "walk": {
            "duration": 0.8, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "leg_l": { "rotation": [0.25, 0.0, 0.0, 0.97] }, "leg_r": { "rotation": [-0.25, 0.0, 0.0, 0.97] }, "arm_l": { "rotation": [-0.15, 0.0, 0.1, 0.99] }, "arm_r": { "rotation": [0.15, 0.0, -0.1, 0.99] } } },
                { "time": 0.4, "bones": { "leg_l": { "rotation": [-0.25, 0.0, 0.0, 0.97] }, "leg_r": { "rotation": [0.25, 0.0, 0.0, 0.97] }, "arm_l": { "rotation": [0.15, 0.0, 0.1, 0.99] }, "arm_r": { "rotation": [-0.15, 0.0, -0.1, 0.99] } } },
                { "time": 0.8, "bones": { "leg_l": { "rotation": [0.25, 0.0, 0.0, 0.97] }, "leg_r": { "rotation": [-0.25, 0.0, 0.0, 0.97] }, "arm_l": { "rotation": [-0.15, 0.0, 0.1, 0.99] }, "arm_r": { "rotation": [0.15, 0.0, -0.1, 0.99] } } }
            ]
        },
        "harvest": {
            "duration": 1.0, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "arm_r": { "rotation": [-0.3, 0.0, -0.3, 0.9] }, "spine": { "rotation": [0.1, 0.0, 0.0, 0.995] } } },
                { "time": 0.5, "bones": { "arm_r": { "rotation": [0.4, 0.0, -0.5, 0.77] }, "spine": { "rotation": [0.2, 0.0, 0.0, 0.98] } }, "events": ["hit_resource"] },
                { "time": 1.0, "bones": { "arm_r": { "rotation": [-0.3, 0.0, -0.3, 0.9] }, "spine": { "rotation": [0.1, 0.0, 0.0, 0.995] } } }
            ]
        },
        "build": {
            "duration": 1.2, "loop": true,
            "keyframes": [
                { "time": 0.0, "bones": { "arm_r": { "rotation": [-0.2, 0.0, -0.4, 0.89] }, "arm_l": { "rotation": [0.1, 0.0, 0.3, 0.95] } } },
                { "time": 0.6, "bones": { "arm_r": { "rotation": [0.3, 0.0, -0.5, 0.81] }, "arm_l": { "rotation": [-0.1, 0.0, 0.4, 0.91] } }, "events": ["hammer_hit"] },
                { "time": 1.2, "bones": { "arm_r": { "rotation": [-0.2, 0.0, -0.4, 0.89] }, "arm_l": { "rotation": [0.1, 0.0, 0.3, 0.95] } } }
            ]
        },
        "death": {
            "duration": 1.2, "loop": false,
            "keyframes": [
                { "time": 0.0, "bones": { "root": { "position": [0.0, 0.0, 0.0], "rotation": [0.0, 0.0, 0.0, 1.0] } } },
                { "time": 0.6, "bones": { "root": { "position": [0.0, -0.3, 0.1], "rotation": [0.3, 0.0, 0.0, 0.95] } } },
                { "time": 1.2, "bones": { "root": { "position": [0.0, -0.6, 0.2], "rotation": [0.6, 0.0, 0.0, 0.8] } } }
            ]
        }
    },

    "animationStateMachine": {
        "initialState": "idle",
        "states": {
            "idle": { "animation": "idle", "transitions": [{ "to": "walk", "condition": "isMoving" }, { "to": "harvest", "condition": "isHarvesting" }, { "to": "build", "condition": "isBuilding" }, { "to": "death", "condition": "isDead" }] },
            "walk": { "animation": "walk", "transitions": [{ "to": "idle", "condition": "!isMoving" }, { "to": "death", "condition": "isDead" }] },
            "harvest": { "animation": "harvest", "transitions": [{ "to": "idle", "condition": "!isHarvesting" }, { "to": "death", "condition": "isDead" }] },
            "build": { "animation": "build", "transitions": [{ "to": "idle", "condition": "!isBuilding" }, { "to": "death", "condition": "isDead" }] },
            "death": { "animation": "death", "transitions": [] }
        }
    },

    "abilities": [
        { "id": "gather", "name": "Gather", "description": "Gather gold or lumber from resources.", "targetType": "resource" },
        { "id": "build", "name": "Build", "description": "Construct a building.", "targetType": "building_placement" },
        { "id": "repair", "name": "Repair", "description": "Repair a damaged building or mechanical unit.", "targetType": "friendly_building" }
    ],

    "behaviors": {
        "on_spawn": { "actions": [{ "type": "play_sound", "sound": "peasant_ready" }] },
        "on_death": { "actions": [{ "type": "play_animation", "animation": "death" }, { "type": "play_sound", "sound": "peasant_death" }] },
        "on_select": { "actions": [{ "type": "random_say", "texts": ["Yes?", "What?", "Hm?", "Ready to work!"], "chance": 1.0 }] }
    }
}
